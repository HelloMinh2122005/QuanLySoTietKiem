<Window
    x:Class="QuanLyDaiLy.Views.KhachHangViews.ThemKhachHang"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:QuanLyDaiLy.ViewModels"
    Title="ThemKhachHang"
    Width="555"
    Height="330"
    d:DataContext="{d:DesignInstance Type=viewmodels:ThemKhachHangViewModel}"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  6% black stroke  -->
        <SolidColorBrush x:Key="ControlStrokeDefaultBrush" Color="#0F000000" />

        <!--  40% gray stroke  -->
        <SolidColorBrush x:Key="SurfaceStrokeDefaultBrush" Color="#66757575" />

        <!--  80% white background  -->
        <SolidColorBrush x:Key="LayerOnMicaBaseAltDefaultBrush" Color="#CCFFFFFF" />
    </Window.Resources>

    <Border
        Background="#EBDFD7"
        BorderBrush="{StaticResource ControlStrokeDefaultBrush}"
        BorderThickness="1"
        CornerRadius="12">
        <Grid Background="{StaticResource LayerOnMicaBaseAltDefaultBrush}">
            <!--  Apply clip to ensure the content doesn't overflow the rounded corners  -->
            <Grid.Clip>
                <RectangleGeometry
                    RadiusX="12"
                    RadiusY="12"
                    Rect="0,0,553,388" />
            </Grid.Clip>
            <Grid.RowDefinitions>
                <RowDefinition Height="250" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>

            <!--  Content Wrapper  -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="307" />
                    <RowDefinition Height="1" />
                </Grid.RowDefinitions>

                <!--  Content  -->
                <Grid Grid.Row="0" Margin="24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="1" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="60" />
                    </Grid.RowDefinitions>

                    <!--  Frame 3  -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontFamily="Segoe UI Variable"
                            FontSize="20"
                            FontStyle="Normal"
                            FontWeight="SemiBold"
                            Foreground="#000000"
                            Text="Lập phiếu khách hàng" />

                        <!--  Close button  -->
                        <Button
                            Grid.Column="1"
                            Width="46"
                            Height="32"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding CloseCommand}">
                            <TextBlock
                                Width="16"
                                Height="16"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Segoe Fluent Icons"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="&#xE10A;"
                                TextAlignment="Center" />
                        </Button>
                    </Grid>
                    <!--  Divider  -->
                    <Border
                        Grid.Row="2"
                        Width="492"
                        Height="1"
                        BorderBrush="#33000000"
                        BorderThickness="1" />

                    <!--  Line 1  -->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <!--  CMND  -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="CMND" />
                            <Border
                                Grid.Row="1"
                                Height="30"
                                Padding="3"
                                VerticalAlignment="Center"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                CornerRadius="4">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Background="#FFFFFF"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    Foreground="#9A000000"
                                    Text="{Binding cmnd, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Left" />
                            </Border>
                        </Grid>

                        <!--  Tên khách hàng  -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="Tên khách hàng" />
                            <Border
                                Grid.Row="1"
                                Height="30"
                                Padding="3"
                                VerticalAlignment="Center"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                CornerRadius="4">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Background="#FFFFFF"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    Foreground="#9A000000"
                                    IsReadOnly="False"
                                    Text="{Binding tenKhachHang, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Left" />
                            </Border>
                        </Grid>
                    </Grid>

                    <!--  Line 2  -->
                    <Grid Grid.Row="6">
                        <!--  Địa chỉ  -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="24" />
                            <RowDefinition Height="36" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontFamily="Segoe UI Variable"
                            FontSize="14"
                            FontStyle="Normal"
                            FontWeight="Normal"
                            Foreground="#000000"
                            Text="Địa chỉ" />
                        <Border
                            Grid.Row="1"
                            Height="30"
                            Padding="3"
                            VerticalAlignment="Center"
                            BorderBrush="#33000000"
                            BorderThickness="1"
                            CornerRadius="4">
                            <TextBox
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Background="#FFFFFF"
                                BorderThickness="0"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#9A000000"
                                IsReadOnly="False"
                                Text="{Binding diachi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                TextAlignment="Left" />
                        </Border>
                    </Grid>
                </Grid>

                <!--  Divider  -->
                <Border
                    Grid.Row="1"
                    Width="540"
                    Height="1"
                    BorderBrush="#33000000"
                    BorderThickness="1" />
            </Grid>

            <!--  List Nude  -->
            <Grid
                Grid.Row="1"
                Height="80"
                VerticalAlignment="Center"
                Background="#E6F0F0F0">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Width="120"
                        Height="35"
                        Margin="0,0,20,0"
                        Background="#FFB498"
                        Command="{Binding LapPhieuCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="buttonBorder"
                                    Padding="5,5,5,7"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FFA080" />
                                        <Setter TargetName="buttonBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect
                                                    BlurRadius="5"
                                                    Opacity="0.3"
                                                    ShadowDepth="1"
                                                    Color="#555555" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FF8060" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock
                            Height="34"
                            FontFamily="Segoe UI Variable"
                            FontSize="18"
                            FontWeight="Normal"
                            Foreground="#92492D"
                            Text="Lập phiếu"
                            TextAlignment="Center" />
                    </Button>
                    <Button
                        Width="120"
                        Height="35"
                        Background="#FFB498"
                        Command="{Binding CloseCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="buttonBorder"
                                    Padding="5,5,5,7"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FFA080" />
                                        <Setter TargetName="buttonBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect
                                                    BlurRadius="5"
                                                    Opacity="0.3"
                                                    ShadowDepth="1"
                                                    Color="#555555" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FF8060" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock
                            Width="70"
                            Height="34"
                            FontFamily="Segoe UI Variable"
                            FontSize="18"
                            FontWeight="Normal"
                            Foreground="#92492D"
                            Text="Thoát"
                            TextAlignment="Center" />
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>