<Window x:Class="QuanLyDaiLy.Views.KhachHangViews.ThemKhachHang"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuanLyDaiLy.Views.KhachHangViews"
        mc:Ignorable="d"
        Title="ThemKhachHang" Height="388" Width="555"
        WindowStyle="None" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        AllowsTransparency="True"
        Background="Transparent">
        
    <Window.Resources>
        <!-- 6% black stroke -->
        <SolidColorBrush x:Key="ControlStrokeDefaultBrush" Color="#0F000000" />

        <!-- 40% gray stroke -->
        <SolidColorBrush x:Key="SurfaceStrokeDefaultBrush" Color="#66757575" />

        <!-- 80% white background -->
        <SolidColorBrush x:Key="LayerOnMicaBaseAltDefaultBrush" Color="#CCFFFFFF" />
    </Window.Resources>

    <Border BorderBrush="{StaticResource ControlStrokeDefaultBrush}" 
    BorderThickness="1" CornerRadius="12" Background="#EBDFD7">
        <Grid Background="{StaticResource LayerOnMicaBaseAltDefaultBrush}">
            <!-- Apply clip to ensure the content doesn't overflow the rounded corners -->
            <Grid.Clip>
                <RectangleGeometry Rect="0,0,553,388" RadiusX="12" RadiusY="12"/>
            </Grid.Clip>
            <Grid.RowDefinitions>
                <RowDefinition Height="308"/>
                <RowDefinition Height="80"/>
            </Grid.RowDefinitions>

            <!-- Content Wrapper -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="307"/>
                    <RowDefinition Height="1"/>
                </Grid.RowDefinitions>

                <!-- Content -->
                <Grid Grid.Row="0" Margin="24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="1"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="60"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="60"/>
                    </Grid.RowDefinitions>

                    <!-- Frame 3 -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="5*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" 
                           Text="Lập phiếu khách hàng" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Left"
                           FontFamily="Segoe UI Variable"
                           FontStyle="Normal"
                           FontWeight="SemiBold"
                           FontSize="20"
                           Foreground="#000000"
                           Margin="0,0,0,0"/>

                        <!-- Close button -->
                        <Button Grid.Column="1"
                        Width="46"
                        Height="32"
                        Background="Transparent" BorderThickness="0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Command="{Binding CloseCommand}"
                        Margin="0,0,0,0">
                            <TextBlock Text="&#xE10A;" 
                               FontFamily="Segoe Fluent Icons"
                               FontStyle="Normal"
                               FontWeight="Normal"
                               FontSize="14"
                               Foreground="#000000"
                               Width="16"
                               Height="16"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               TextAlignment="Center"/>
                        </Button>
                    </Grid>
                    <!-- Divider -->
                    <Border Grid.Row="2" Width="492" Height="1" BorderBrush="#33000000" BorderThickness="1"/>

                    <!-- Line 1 -->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>

                        <!-- CMND -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="36"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" 
                                    Text="CMND" 
                                    VerticalAlignment="Center" 
                                    HorizontalAlignment="Left"
                                    FontFamily="Segoe UI Variable"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    FontSize="14"
                                    Foreground="#000000"
                                    Margin="0,0,0,0"/>
                            <TextBox Grid.Row="1"
                                    Height="30"
                                    Background="Transparent" 
                                    BorderBrush="#33000000"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    VerticalContentAlignment="Center"
                                    Margin="0,0,0,0"
                                    FontFamily="Segoe UI Variable"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    FontSize="14"
                                    Foreground="#9A000000"
                                    TextAlignment="Left"
                                    BorderThickness="1" 
                                    Text="{Binding Cmnd, UpdateSourceTrigger=PropertyChanged}"/>
                        </Grid>
                        <!-- Tên khách hàng -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24"/>
                                <RowDefinition Height="36"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" 
                                       Text="Tên khách hàng" 
                                       VerticalAlignment="Center" 
                                       HorizontalAlignment="Left"
                                       FontFamily="Segoe UI Variable"
                                       FontStyle="Normal"
                                       FontWeight="Normal"
                                       FontSize="14"
                                       Foreground="#000000"
                                       Margin="0,0,0,0"/>
                            <TextBox   Grid.Row="1"
                                         Height="30"
                                         Background="Transparent"
                                         BorderBrush="#33000000"
                                         HorizontalAlignment="Stretch"
                                         VerticalAlignment="Center"
                                         VerticalContentAlignment="Center"
                                         Margin="0,0,0,0"
                                         FontFamily="Segoe UI Variable"
                                         FontStyle="Normal"
                                         FontWeight="Normal"
                                         FontSize="14"
                                         Foreground="#9A000000"
                                         TextAlignment="Left"
                                         BorderThickness="1" 
                                         Text="{Binding KhachHang.TenKhachHang, Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"/>

                        </Grid>
                    </Grid>

                    <!-- Line 2 -->
                    <Grid Grid.Row="6">
                        <!-- Địa chỉ -->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="24"/>
                            <RowDefinition Height="36"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" 
                                   Text="Địa chỉ" 
                                   VerticalAlignment="Center" 
                                   HorizontalAlignment="Left"
                                   FontFamily="Segoe UI Variable"
                                   FontStyle="Normal"
                                   FontWeight="Normal"
                                   FontSize="14"
                                   Foreground="#000000"
                                   Margin="0,0,0,0"/>
                        <TextBox Grid.Row="1"
                                 Background="Transparent"
                                 Height="30"
                                 BorderBrush="#33000000"
                                 HorizontalAlignment="Stretch"
                                 VerticalAlignment="Center"
                                 VerticalContentAlignment="Center"
                                 Margin="0,0,0,0"
                                 FontFamily="Segoe UI Variable"
                                 FontStyle="Normal"
                                 FontWeight="Normal"
                                 FontSize="14"
                                 Foreground="#9A000000"
                                 TextAlignment="Left"
                                 BorderThickness="1" 
                                 Text="{Binding KhachHang.DiaChi, UpdateSourceTrigger=PropertyChanged}"
                                 />
                    </Grid>
                </Grid>

                <!-- Divider -->
                <Border Grid.Row="1" Width="540" Height="1" BorderBrush="#33000000" BorderThickness="1"/>
            </Grid>

            <!-- List Nude -->
            <Grid Grid.Row="1" Background="#E6F0F0F0" VerticalAlignment="Center" Height="80">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">

                    <Button Width="120" Height="35" Background="#FFB498" Margin="0,0,20,0" Command="{Binding CapNhatCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="buttonBorder" Background="{TemplateBinding Background}" 
                            CornerRadius="10" Padding="5,5,5,7">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FFA080"/>
                                        <Setter TargetName="buttonBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.3" Color="#555555"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FF8060"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="Lập phiếu" FontFamily="Segoe UI Variable" FontSize="18" FontWeight="Normal" 
                        TextAlignment="Center" Height="34" Foreground="#92492D"/>
                    </Button>
                    <Button Width="120" Height="35" Background="#FFB498" Command="{Binding CloseCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="buttonBorder" Background="{TemplateBinding Background}" 
                            CornerRadius="10" Padding="5,5,5,7">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FFA080"/>
                                        <Setter TargetName="buttonBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.3" Color="#555555"/>
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FF8060"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock Text="Thoát" FontFamily="Segoe UI Variable" FontSize="18" FontWeight="Normal" 
                        TextAlignment="Center" Width="70" Height="34" Foreground="#92492D"/>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>

</Window>
