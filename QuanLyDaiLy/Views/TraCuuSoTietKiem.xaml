<Window
    x:Class="QuanLyDaiLy.Views.TraCuuSoTietKiem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TraCuuSoTietKiem"
    Width="1360"
    Height="600"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  6% black stroke  -->
        <SolidColorBrush x:Key="ControlStrokeDefaultBrush" Color="#0F000000" />

        <!--  80% white background  -->
        <SolidColorBrush x:Key="LayerOnMicaBaseAltDefaultBrush" Color="#CCFFFFFF" />
    </Window.Resources>

    <Border
        Background="#EBDFD7"
        BorderBrush="{StaticResource ControlStrokeDefaultBrush}"
        BorderThickness="1"
        CornerRadius="10">
        <Grid Background="{StaticResource LayerOnMicaBaseAltDefaultBrush}">

            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Content Wrapper  -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="1" />
                </Grid.RowDefinitions>

                <!--  Content  -->
                <Grid Grid.Row="0" Margin="24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32*" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="1" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="60*" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="40*" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="40*" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="40*" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="40*" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="40*" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="40*" />
                    </Grid.RowDefinitions>


                    <!--  Frame 3  -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="5*" />

                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontFamily="Segoe UI Variable"
                            FontSize="20"
                            FontStyle="Normal"
                            FontWeight="SemiBold"
                            Foreground="#000000"
                            Text="Tra cứu sổ tiết kiệm" />

                        <!--  Close button  -->
                        <Button
                            Grid.Column="1"
                            Width="46"
                            Height="32"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding CloseCommand}">
                            <TextBlock
                                Width="16"
                                Height="16"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Segoe Fluent Icons"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="&#xE10A;"
                                TextAlignment="Center" />
                        </Button>
                    </Grid>
                    <!--  Divider  -->
                    <Border
                        Grid.Row="2"
                        Height="1"
                        HorizontalAlignment="Stretch"
                        BorderBrush="#33000000"
                        BorderThickness="1" />

                    <!--  Line 1  -->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <!--  2 cột chính, ngăn cách bởi khoảng 12px  -->
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <!--  Mã phiếu  -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="Mã sổ tiết kiệm" />
                            <Border
                                Grid.Row="1"
                                Height="30"
                                Padding="3"
                                VerticalAlignment="Center"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                CornerRadius="4">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#FFFFFF"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    Foreground="Black"
                                    Text="{Binding MaSoTietKiem, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Left" />
                            </Border>
                        </Grid>

                        <!--  Ngày gởi tiền  -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="Tên Loại tiết kiệm" />
                            <ComboBox
                                Grid.Row="1"
                                Margin="0,3"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Background="#FFFFFF"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                FontFamily="Nunito"
                                FontSize="18"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                ItemsSource="{Binding DsLoaiTietKiem}"
                                SelectedItem="{Binding LoaiTietKiemSelected}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TenLoaiTietKiem}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                                <ComboBox.Template>
                                    <ControlTemplate TargetType="{x:Type ComboBox}">
                                        <Grid>
                                            <Border
                                                x:Name="mainBorder"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="5">
                                                <Grid>
                                                    <ToggleButton
                                                        x:Name="toggleButton"
                                                        Background="Transparent"
                                                        BorderBrush="Transparent"
                                                        ClickMode="Press"
                                                        Focusable="false"
                                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                                        <ToggleButton.Template>
                                                            <ControlTemplate TargetType="ToggleButton">
                                                                <Grid Background="Transparent">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition />
                                                                        <ColumnDefinition Width="30" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <Border Grid.ColumnSpan="2" Background="Transparent" />
                                                                    <Path
                                                                        x:Name="arrow"
                                                                        Grid.Column="1"
                                                                        Width="12"
                                                                        Height="12"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"
                                                                        Data="M7 10l5 5 5-5z"
                                                                        Fill="Black"
                                                                        Stretch="Fill" />
                                                                </Grid>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="true">
                                                                        <Setter TargetName="arrow" Property="Fill" Value="#FF8060" />
                                                                    </Trigger>
                                                                    <Trigger Property="IsChecked" Value="true">
                                                                        <Setter TargetName="arrow" Property="Fill" Value="#FF8060" />
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </ToggleButton.Template>
                                                    </ToggleButton>

                                                    <ContentPresenter
                                                        x:Name="contentPresenter"
                                                        Margin="10,0,30,0"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        Content="{TemplateBinding SelectionBoxItem}"
                                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" />
                                                </Grid>
                                            </Border>

                                            <Popup
                                                x:Name="PART_Popup"
                                                AllowsTransparency="True"
                                                Focusable="False"
                                                IsOpen="{Binding IsChecked, ElementName=toggleButton}"
                                                Placement="Bottom"
                                                PopupAnimation="Slide">
                                                <Border
                                                    x:Name="dropDownBorder"
                                                    MinWidth="{TemplateBinding ActualWidth}"
                                                    Margin="0,1,0,0"
                                                    Background="#FFFFFF"
                                                    BorderBrush="#33000000"
                                                    BorderThickness="1"
                                                    CornerRadius="8">
                                                    <Border.Effect>
                                                        <DropShadowEffect
                                                            BlurRadius="10"
                                                            Opacity="0.5"
                                                            ShadowDepth="0"
                                                            Color="Black" />
                                                    </Border.Effect>
                                                    <ScrollViewer MaxHeight="200" SnapsToDevicePixels="True">
                                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                                    </ScrollViewer>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="mainBorder" Property="BorderBrush" Value="#0088CC" />
                                            </Trigger>
                                            <Trigger Property="IsDropDownOpen" Value="True">
                                                <Setter TargetName="mainBorder" Property="BorderBrush" Value="#0088CC" />
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="mainBorder" Property="Opacity" Value="0.6" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ComboBox.Template>
                            </ComboBox>

                        </Grid>

                        <Grid Grid.Column="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="Tình trạng sổ" />
                            <ComboBox
                                Grid.Row="1"
                                Margin="0,3"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Background="#FFFFFF"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                FontFamily="Nunito"
                                FontSize="18"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                ItemsSource="{Binding DsTinhTrangSo}"
                                SelectedItem="{Binding  TinhTrangSoSelected}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding }" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                                <ComboBox.Template>
                                    <ControlTemplate TargetType="{x:Type ComboBox}">
                                        <Grid>
                                            <Border
                                                x:Name="mainBorder"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="5">
                                                <Grid>
                                                    <ToggleButton
                                                        x:Name="toggleButton"
                                                        Background="Transparent"
                                                        BorderBrush="Transparent"
                                                        ClickMode="Press"
                                                        Focusable="false"
                                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                                        <ToggleButton.Template>
                                                            <ControlTemplate TargetType="ToggleButton">
                                                                <Grid Background="Transparent">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition />
                                                                        <ColumnDefinition Width="30" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <Border Grid.ColumnSpan="2" Background="Transparent" />
                                                                    <Path
                                                                        x:Name="arrow"
                                                                        Grid.Column="1"
                                                                        Width="12"
                                                                        Height="12"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"
                                                                        Data="M7 10l5 5 5-5z"
                                                                        Fill="Black"
                                                                        Stretch="Fill" />
                                                                </Grid>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="true">
                                                                        <Setter TargetName="arrow" Property="Fill" Value="#FF8060" />
                                                                    </Trigger>
                                                                    <Trigger Property="IsChecked" Value="true">
                                                                        <Setter TargetName="arrow" Property="Fill" Value="#FF8060" />
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </ToggleButton.Template>
                                                    </ToggleButton>

                                                    <ContentPresenter
                                                        x:Name="contentPresenter"
                                                        Margin="10,0,30,0"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        Content="{TemplateBinding SelectionBoxItem}"
                                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" />
                                                </Grid>
                                            </Border>

                                            <Popup
                                                x:Name="PART_Popup"
                                                AllowsTransparency="True"
                                                Focusable="False"
                                                IsOpen="{Binding IsChecked, ElementName=toggleButton}"
                                                Placement="Bottom"
                                                PopupAnimation="Slide">
                                                <Border
                                                    x:Name="dropDownBorder"
                                                    MinWidth="{TemplateBinding ActualWidth}"
                                                    Margin="0,1,0,0"
                                                    Background="#FFFFFF"
                                                    BorderBrush="#33000000"
                                                    BorderThickness="1"
                                                    CornerRadius="8">
                                                    <Border.Effect>
                                                        <DropShadowEffect
                                                            BlurRadius="10"
                                                            Opacity="0.5"
                                                            ShadowDepth="0"
                                                            Color="Black" />
                                                    </Border.Effect>
                                                    <ScrollViewer MaxHeight="200" SnapsToDevicePixels="True">
                                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                                    </ScrollViewer>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="mainBorder" Property="BorderBrush" Value="#0088CC" />
                                            </Trigger>
                                            <Trigger Property="IsDropDownOpen" Value="True">
                                                <Setter TargetName="mainBorder" Property="BorderBrush" Value="#0088CC" />
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="mainBorder" Property="Opacity" Value="0.6" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ComboBox.Template>
                            </ComboBox>
                        </Grid>
                        <Grid Grid.Column="6">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="CMND" />
                            <Border
                                Grid.Row="1"
                                Height="30"
                                Padding="3"
                                VerticalAlignment="Center"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                CornerRadius="4">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#FFFFFF"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    Foreground="Black"
                                    Text="{Binding CMMND, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Left" />
                            </Border>
                        </Grid>
                        <Grid Grid.Column="8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="Tên Khách hàng" />
                            <Border
                                Grid.Row="1"
                                Height="30"
                                Padding="3"
                                VerticalAlignment="Center"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                CornerRadius="4">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#FFFFFF"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    Foreground="Black"
                                    Text="{Binding TenKhachHang, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Left" />
                            </Border>
                        </Grid>
                    </Grid>

                    <!--  Line 2  -->
                    <Grid Grid.Row="6">
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                Foreground="#000000"
                                Text="Lãi Suất từ  " />
                            <Border
                                Grid.Column="1"
                                Width="300"
                                Height="30"
                                Padding="3"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                CornerRadius="4">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#FFFFFF"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    Foreground="Black"
                                    Text="{Binding LaiSuatTu, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Left" />
                            </Border>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                Foreground="#000000"
                                Text="   đến  " />
                            <Border
                                Width="300"
                                Height="30"
                                Padding="3"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                CornerRadius="4">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#FFFFFF"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    Foreground="Black"
                                    Text="{Binding LaiSuatDen, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Left" />
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!--  Line 3  -->
                    <Grid Grid.Row="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                Foreground="#000000"
                                Text="Ngày mở sổ bắt đầu từ  " />
                            <Border
                                Width="225"
                                Height="30"
                                Padding="2"
                                VerticalAlignment="Center"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                CornerRadius="4">
                                <DatePicker
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#FFFFFF"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    Foreground="Black"
                                    SelectedDate="{Binding NgayMoSoTu}">
                                    <DatePicker.Resources>
                                        <Style x:Key="HideCalendarButton" TargetType="Button">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                            </Border>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                Foreground="#000000"
                                Text="   đến  " />
                            <Border
                                Width="225"
                                Height="30"
                                Padding="2"
                                VerticalAlignment="Center"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                CornerRadius="4">
                                <DatePicker
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#FFFFFF"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    Foreground="Black"
                                    SelectedDate="{Binding NgayMoSoDen}">
                                    <DatePicker.Resources>
                                        <Style x:Key="HideCalendarButton" TargetType="Button">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                            </Border>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                Foreground="#000000"
                                Text="Số dư từ    " />
                            <Border
                                Width="265"
                                Height="30"
                                Padding="3"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                CornerRadius="4">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#FFFFFF"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    Foreground="Black"
                                    Text="{Binding SoDuTu, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Left" />
                            </Border>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                Foreground="#000000"
                                Text="   đến  " />
                            <Border
                                Width="265"
                                Height="30"
                                Padding="3"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                CornerRadius="4">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#FFFFFF"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    Foreground="Black"
                                    Text="{Binding SoDuDen, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Left" />
                            </Border>
                        </StackPanel>
                    </Grid>

                    <!--  Line 4  -->
                    <Grid Grid.Row="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                Foreground="#000000"
                                Text="Ngày lập Phiếu gởi tiền từ  " />
                            <Border
                                Width="215"
                                Height="30"
                                Padding="2"
                                VerticalAlignment="Center"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                CornerRadius="4">
                                <DatePicker
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#FFFFFF"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    Foreground="Black"
                                    SelectedDate="{Binding NgayGuiPhieuGuiTienTu}">
                                    <DatePicker.Resources>
                                        <Style x:Key="HideCalendarButton" TargetType="Button">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                            </Border>
                            <TextBlock
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                Foreground="#000000"
                                Text="   đến  " />
                            <Border
                                Width="215"
                                Height="30"
                                Padding="2"
                                VerticalAlignment="Center"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                CornerRadius="4">
                                <DatePicker
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#FFFFFF"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    Foreground="Black"
                                    SelectedDate="{Binding NgayGuiPhieuGuiTienDen}">
