<Window
    x:Class="QuanLyDaiLy.Views.DanhSachSoTietKiem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:QuanLyDaiLy.Helpers"
    Title="Danh Sách Sổ Tiết Kiệm"
    Width="1580"
    Height="930"
    Background="#EBDFD7"
    WindowState="Maximized">

    <Window.Resources>

        <Style x:Key="NavButtonStyle" TargetType="RadioButton">
            <Setter Property="Height" Value="50" />
            <Setter Property="Margin" Value="5,2" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="HorizontalContentAlignment" Value="Left" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border
                            x:Name="border"
                            Padding="10,5"
                            Background="{TemplateBinding Background}"
                            CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="border" Property="Background" Value="White" />
                                <Setter Property="Foreground" Value="#E65F2B" />
                                <Setter TargetName="border" Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect
                                            BlurRadius="5"
                                            Opacity="0.3"
                                            ShadowDepth="0"
                                            Color="White" />
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <!--  Different hover effect based on selection state  -->
                                <Setter TargetName="border" Property="Background" Value="#444444" />
                                <Setter TargetName="border" Property="BorderBrush" Value="#E65F2B" />
                                <Setter TargetName="border" Property="BorderThickness" Value="1" />
                            </Trigger>
                            <!--  Combined trigger for selected + hover  -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsMouseOver" Value="True" />
                                    <Condition Property="IsChecked" Value="True" />
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="Background" Value="#F5F5F5" />
                                <Setter TargetName="border" Property="BorderBrush" Value="#E65F2B" />
                                <Setter TargetName="border" Property="BorderThickness" Value="1" />
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DropShadowEffect
            x:Key="DropShadowEffect"
            BlurRadius="10"
            Opacity="0.5"
            ShadowDepth="0"
            Color="Black" />

        <converters:ComboBoxItemConverter x:Key="ComboBoxItemConverter" />

        <converters:BooleanToStatusConverter x:Key="BooleanToStatusConverter" />

        <!--  ComboBox Style  -->
        <Style x:Key="StyledComboBox" TargetType="{x:Type ComboBox}">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#33000000" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Width" Value="300" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="FontFamily" Value="Nunito" />
            <Setter Property="FontStyle" Value="Normal" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="#000000" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding TenLoaiTietKiem}" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <Border
                                x:Name="mainBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                                <Grid>
                                    <ToggleButton
                                        x:Name="toggleButton"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        ClickMode="Press"
                                        Focusable="false"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Grid Background="Transparent">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="30" />
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.ColumnSpan="2" Background="Transparent" />
                                                    <Path
                                                        x:Name="arrow"
                                                        Grid.Column="1"
                                                        Width="12"
                                                        Height="12"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Data="M7 10l5 5 5-5z"
                                                        Fill="Black"
                                                        Stretch="Fill" />
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="true">
                                                        <Setter TargetName="arrow" Property="Fill" Value="#E65F2B" />
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="true">
                                                        <Setter TargetName="arrow" Property="Fill" Value="#E65F2B" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>

                                    <TextBlock
                                        x:Name="contentText"
                                        Margin="10,0,30,0"
                                        VerticalAlignment="Center"
                                        Text="{TemplateBinding SelectionBoxItem,
                                                               Converter={StaticResource ComboBoxItemConverter}}" />
                                </Grid>
                            </Border>

                            <Popup
                                x:Name="PART_Popup"
                                AllowsTransparency="True"
                                Focusable="False"
                                IsOpen="{Binding IsChecked, ElementName=toggleButton}"
                                Placement="Bottom"
                                PopupAnimation="Slide">
                                <Border
                                    x:Name="dropDownBorder"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    Margin="0,1,0,0"
                                    Background="#FFFFFF"
                                    BorderBrush="#33000000"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Effect="{StaticResource DropShadowEffect}">
                                    <ScrollViewer MaxHeight="200" SnapsToDevicePixels="True">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="mainBorder" Property="BorderBrush" Value="#0088CC" />
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="mainBorder" Property="BorderBrush" Value="#0088CC" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="mainBorder" Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  ComboBoxItem Style  -->
        <Style x:Key="StyledComboBoxItem" TargetType="{x:Type ComboBoxItem}">
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                        <Border
                            x:Name="ItemBorder"
                            Margin="2,1"
                            Padding="{TemplateBinding Padding}"
                            Background="Transparent"
                            CornerRadius="5">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#E3F2FD" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#BBDEFB" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="NavColumn" Width="60" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!--  Navigation Rail/Drawer  -->
        <Grid
            x:Name="NavigationRail"
            Grid.Column="0"
            Background="Black"
            MouseEnter="NavigationRail_MouseEnter"
            MouseLeave="NavigationRail_MouseLeave">

            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  Existing content  -->
            <Border
                Grid.Row="0"
                MaxWidth="180"
                MaxHeight="60"
                Margin="0,30,0,10"
                CornerRadius="30">
                <Grid Margin="8,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--  Icon Image  -->
                    <Border
                        Grid.Column="0"
                        Width="40"
                        Height="40">
                        <Image
                            Margin="5"
                            Source="pack://application:,,,/QuanLyDaiLy;component/Resources/icon.png"
                            Stretch="Uniform" />
                    </Border>

                    <!--  Text  -->
                    <TextBlock
                        Grid.Column="1"
                        Margin="8,0,0,0"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontFamily="Segoe UI"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="White"
                        Text="SCAMBANK" />
                </Grid>
            </Border>

            <StackPanel Grid.Row="1" Margin="0,20,0,0">

                <RadioButton
                    Checked="RadioButton_Checked"
                    Content=" 🛍  Sổ tiết kiệm"
                    GroupName="NavGroup"
                    Style="{StaticResource NavButtonStyle}"
                    Tag="SoTietKiem" />
                <RadioButton
                    Checked="RadioButton_Checked"
                    Content=" 🕵️‍♂️  Khách hàng"
                    GroupName="NavGroup"
                    Style="{StaticResource NavButtonStyle}"
                    Tag="KhachHang" />
                <RadioButton
                    Checked="RadioButton_Checked"
                    Content=" 💰 Phiếu gửi tiền"
                    GroupName="NavGroup"
                    Style="{StaticResource NavButtonStyle}"
                    Tag="PhieuGoiTien" />
                <RadioButton
                    Checked="RadioButton_Checked"
                    Content=" 🏧 Phiếu rút tiền"
                    GroupName="NavGroup"
                    Style="{StaticResource NavButtonStyle}"
                    Tag="PhieuRutTien" />
                <RadioButton
                    Checked="RadioButton_Checked"
                    Content=" 📈 Báo cáo Doanh số"
                    GroupName="NavGroup"
                    Style="{StaticResource NavButtonStyle}"
                    Tag="BaoCaoDoanhSo" />
                <RadioButton
                    Checked="RadioButton_Checked"
                    Content=" 📊 Báo cáo Đóng mở"
                    GroupName="NavGroup"
                    Style="{StaticResource NavButtonStyle}"
                    Tag="BaoCaoDongMo" />
                <RadioButton
                    Checked="RadioButton_Checked"
                    Content=" ⚙️ Tham số"
                    GroupName="NavGroup"
                    Style="{StaticResource NavButtonStyle}"
                    Tag="ThamSo" />
            </StackPanel>

            <Border
                Grid.Row="2"
                Width="40"
                Height="40"
                Margin="0,0,0,30">
                <Button
                    Background="#E65F2B"
                    BorderThickness="0"
                    Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <!--  Outer container with orange background  -->
                            <Border
                                x:Name="outerBorder"
                                Background="#E65F2B"
                                CornerRadius="90">
                                <Grid>
                                    <!--  Inner white circle  -->
                                    <Border
                                        Width="30"
                                        Height="30"
                                        Margin="5"
                                        Background="Transparent"
                                        BorderBrush="White"
                                        BorderThickness="2"
                                        CornerRadius="90">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            FontSize="20"
                                            FontWeight="Bold"
                                            Foreground="White"
                                            Text="?" />
                                    </Border>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="outerBorder" Property="Background" Value="#F47346" />
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="outerBorder" Property="Background" Value="#D34816" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Border>
        </Grid>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Header  -->
            <Grid
                Grid.Row="0"
                Margin="0,30,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*" />
                    <ColumnDefinition Width="50*" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Width="167"
                    Height="36"
                    Margin="30,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    FontFamily="Arial"
                    FontSize="32"
                    FontStyle="Normal"
                    FontWeight="Normal"
                    Foreground="#060606"
                    LineHeight="37"
                    Text="Sổ tiết kiệm"
                    TextAlignment="Center" />

                <!--  Search bar  -->
                <Border
                    Grid.Column="1"
                    Margin="0,0,30,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Background="#FFFFFF"
                    BorderBrush="#060606"
                    BorderThickness="0.5"
                    CornerRadius="22">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Image
                            Width="24"
                            Height="24"
                            Margin="24,0,0,0"
                            VerticalAlignment="Center"
                            Source="pack://application:,,,/QuanLyDaiLy;component/Resources/searchicon.png" />
                        <TextBox
                            Grid.Column="1"
                            Padding="13"
                            HorizontalContentAlignment="Left"
                            VerticalContentAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            FontFamily="Arial"
                            FontSize="16"
                            Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                    </Grid>
                </Border>
            </Grid>

            <!--  Line  -->
            <Border
                Grid.Row="1"
                Margin="30,10,30,0"
                HorizontalAlignment="Stretch"
                BorderBrush="#33000000"
                BorderThickness="1" />

            <!--  Overview  -->
            <Grid
                Grid.Row="2"
                Margin="30,20,30,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="5*" />
                </Grid.ColumnDefinitions>

                <StackPanel
                    Grid.Column="0"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal">
                    <TextBlock
                        Height="30"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontFamily="Arial"
                        FontSize="20"
                        FontStyle="Normal"
                        FontWeight="Normal"
                        Foreground="#060606"
                        LineHeight="23"
                        Text="Loại tiết kiệm"
                        TextAlignment="Left" />

                    <ComboBox
                        DisplayMemberPath="TenLoaiTietKiem"
                        ItemsSource="{Binding DanhSachLoaiTietKiem}"
                        SelectedItem="{Binding SelectedLoaiTietKiem, Mode=TwoWay}"
                        Style="{StaticResource StyledComboBox}" />

                    <Button
                        Height="35"
                        Background="#FFB498"
                        Command="{Binding MoTraCuuSoTietKiemCommand}"
                        Foreground="White">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="buttonBorder"
                                    Padding="5,5,5,7"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FFA080" />
                                        <Setter TargetName="buttonBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect
                                                    BlurRadius="5"
                                                    Opacity="0.3"
                                                    ShadowDepth="1"
                                                    Color="#555555" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FF8060" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock
                            FontFamily="Segoe UI Variable"
                            FontSize="18"
                            Foreground="#92492D"
                            Text=" Tra cứu Sổ tiết kiệm "
                            TextAlignment="Center" />
                    </Button>
                </StackPanel>

                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <Button
                        Width="120"
                        Height="35"
                        Margin="0,0,10,0"
                        Background="#FFB498"
                        Command="{Binding ThemSoTietKiemCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="buttonBorder"
                                    Padding="5,5,5,7"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FFA080" />
                                        <Setter TargetName="buttonBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect
                                                    BlurRadius="5"
                                                    Opacity="0.3"
                                                    ShadowDepth="1"
                                                    Color="#555555" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FF8060" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock
                            Width="70"
                            FontFamily="Segoe UI Variable"
                            FontSize="18"
                            Foreground="#92492D"
                            Text="Thêm sổ"
                            TextAlignment="Center" />
                    </Button>

                    <Button
                        Width="120"
                        Height="35"
                        Margin="0,0,10,0"
                        Background="#FFB498"
                        Command="{Binding XoaSoTietKiemCommand}"
                        Foreground="White">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="buttonBorder"
                                    Padding="5,5,5,7"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FFA080" />
                                        <Setter TargetName="buttonBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect
                                                    BlurRadius="5"
                                                    Opacity="0.3"
                                                    ShadowDepth="1"
                                                    Color="#555555" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FF8060" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock
                            Width="70"
                            FontFamily="Segoe UI Variable"
                            FontSize="18"
                            Foreground="#92492D"
                            Text="Xoá sổ"
                            TextAlignment="Center" />
                    </Button>

                    <Button
                        Width="150"
                        Height="35"
                        Background="#FFB498"
                        Command="{Binding CapNhatSoTietKiemCommand}"
                        Foreground="White">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="buttonBorder"
                                    Padding="5,5,5,7"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FFA080" />
                                        <Setter TargetName="buttonBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect
                                                    BlurRadius="5"
                                                    Opacity="0.3"
                                                    ShadowDepth="1"
                                                    Color="#555555" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FF8060" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock
                            Width="100"
                            FontFamily="Segoe UI Variable"
                            FontSize="18"
                            Foreground="#92492D"
                            Text="Cập nhật sổ"
                            TextAlignment="Center" />
                    </Button>
                </StackPanel>
            </Grid>

            <!--  DataGrid  -->
            <Border
                Grid.Row="3"
                Margin="30,18,30,20"
                Padding="30"
                VerticalAlignment="Stretch"
                Background="#F2EAE5"
                CornerRadius="17"
                Effect="{StaticResource DropShadowEffect}">
                <DataGrid
                    VerticalAlignment="Stretch"
                    AutoGenerateColumns="False"
                    Background="Transparent"
                    BorderThickness="0"
                    CanUserAddRows="False"
                    GridLinesVisibility="None"
                    HeadersVisibility="Column"
                    IsReadOnly="True"
                    ItemsSource="{Binding DanhSachSoTietKiem}"
                    LoadingRow="DataGrid_LoadingRow"
                    SelectedItem="{Binding SelectedSoTietKiem, Mode=TwoWay}">
                    <DataGrid.Resources>
                        <!--  Don't blow up to white on inactive  -->
                        <SolidColorBrush x:Key="{x:Static Member=SystemColors.InactiveSelectionHighlightBrushKey}" Color="#FFB498" />
                        <!--  Cell style (kept unchanged)  -->
                        <Style TargetType="DataGridCell">
                            <Style.Resources>
                                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FFB498" />
                            </Style.Resources>
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                            <Setter Property="Padding" Value="10,0" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridCell">
                                        <Border
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            SnapsToDevicePixels="True">
                                            <ContentPresenter
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.Resources>

                    <!--  RowStyle with triggers that add effects without changing original colors  -->
                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderThickness" Value="0,0,0,1" />
                            <Setter Property="BorderBrush" Value="#E0E0E0" />
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <SolidColorBrush Color="Wheat" />
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <!--  ColumnHeaderStyle kept as original  -->
                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="HorizontalContentAlignment" Value="Center" />
                            <Setter Property="Background" Value="#F2EAE5" />
                            <Setter Property="Foreground" Value="#060606" />
                            <Setter Property="FontFamily" Value="Arial" />
                            <Setter Property="FontStyle" Value="Normal" />
                            <Setter Property="FontWeight" Value="Normal" />
                            <Setter Property="FontSize" Value="24" />
                            <Setter Property="Padding" Value="0,0,0,0" />
                            <Setter Property="BorderThickness" Value="0,0,0,0.5" />
                            <Setter Property="BorderBrush" Value="#060606" />
                            <Setter Property="VerticalContentAlignment" Value="Center" />
                            <Setter Property="Height" Value="40" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="DataGridColumnHeader">
                                        <Grid>
                                            <Border
                                                Padding="5,0,5,0"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                                <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center" />
                                            </Border>
                                        </Grid>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <!--  Columns (unchanged)  -->
                    <DataGrid.Columns>
