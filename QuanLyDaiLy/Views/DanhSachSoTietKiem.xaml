<Window x:Class="QuanLyDaiLy.Views.DanhSachSoTietKiem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:QuanLyDaiLy.ViewModels"
        Title="Danh Sách Sổ Tiết Kiệm" Height="450" Width="1080" Background="#EBDFD7">
    <Window.DataContext>
        <local:DanhSachSoTietKiemViewModel/>
    </Window.DataContext>


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Tiêu đề -->
            <RowDefinition Height="Auto"/>
            <!-- Thanh công cụ -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- Tiêu đề -->
        <Border Grid.Row="0" Width="1020" Height="37" Margin="30">
            <TextBlock Text="Sổ tiết kiệm" FontSize="32" VerticalAlignment="Center" FontWeight="Normal" Foreground="#060606"/>
        </Border>

        <!-- Thanh công cụ -->
        <Border Padding="30,0,30,27" Grid.Row="1" Margin="0" >
            <Grid Height="34">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                    <TextBlock Text="Loại tiết kiệm" FontSize="22" FontWeight="Normal" VerticalAlignment="Center" Foreground="#060606"></TextBlock>
                    <ComboBox Width="113" Margin="17,0,0,0" Background="#FFFFFF" Padding="2,14">
                        <ComboBoxItem Content="Tất cả"/>
                        <ComboBoxItem Content="Không kỳ hạn"/>
                        <ComboBoxItem Content="3 tháng"/>
                        <ComboBoxItem Content="6 tháng"/>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                    <StackPanel.Resources>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </StackPanel.Resources>

                    <Button Content="Thêm sổ" Width="100" Height="34" Background="#005FB8" Foreground="#FFFFFF" FontSize="14" Margin="0,0,10,0"></Button>
                    <Button Content="Xoá sổ" Width="100" Height="34" Background="#005FB8" Foreground="#FFFFFF" FontSize="14" Margin="0,0,10,0"></Button>
                    <Button Content="Nhập sổ từ Excel" Width="132" Height="34" Background="#005FB8" Foreground="#FFFFFF" FontSize="14" Margin="0,0,10,0"></Button>
                    <Button Content="Xuất Excel" Width="100" Height="34" Background="#005FB8" Foreground="#FFFFFF" FontSize="14"></Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <Border Grid.Row="2" Padding="30" CornerRadius="17" Background="#F2EAE5" Margin="30,0,30,0">
            <DataGrid ItemsSource="{Binding DanhSachSoTietKiem}" AutoGenerateColumns="False" GridLinesVisibility="None" 
                      HeadersVisibility="Column" CanUserAddRows="False" BorderThickness="0" LoadingRow="DataGrid_LoadingRow" Background="Transparent">
                <DataGrid.Resources>
                    <!-- Style cho header -->
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Background" Value="#F2EAE5"/>
                        <Setter Property="Foreground" Value="#060606"/>
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="Padding" Value="0, 0, 0, 15"/>
                        <Setter Property="BorderThickness" Value="0,0,0,0.5"/>
                        <Setter Property="BorderBrush" Value="#060606"/>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="TextBlock.TextAlignment" Value="Center"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="Background" Value="#F2EAE5"/>
                        <Setter Property="Foreground" Value="#060606"/>
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="BorderThickness" Value="0"/>
                    </Style>
                </DataGrid.CellStyle>
                
                <DataGrid.Columns>
                    <DataGridTextColumn Header="STT" Binding="{Binding STT}" Width="50" FontSize="20"/>
                    <DataGridCheckBoxColumn Header="Chọn" Binding="{Binding IsSelected}" Width="70">
                        <DataGridCheckBoxColumn.ElementStyle>
                            <Style TargetType="CheckBox">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </DataGridCheckBoxColumn.ElementStyle>
                    </DataGridCheckBoxColumn>

                    <DataGridTextColumn Header="Sửa" Width="70" FontSize="20"/>
                    <DataGridTextColumn Header="Mã số" Binding="{Binding MaSo}" Width="150" FontSize="20"/>
                    <DataGridTextColumn Header="Loại tiết kiệm" Binding="{Binding LoaiTietKiem}" Width="150" FontSize="20"/>
                    <DataGridTextColumn Header="Khách hàng" Binding="{Binding KhachHang}" Width="*" FontSize="20"/>
                    <DataGridTextColumn Header="Số dư" Binding="{Binding SoDu, StringFormat=N2}" Width="150" FontSize="20"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>
