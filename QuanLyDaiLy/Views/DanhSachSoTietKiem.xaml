<Window x:Class="QuanLyDaiLy.Views.DanhSachSoTietKiem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:QuanLyDaiLy.ViewModels"
        xmlns:global="clr-namespace:"
        Title="Danh Sách Sổ Tiết Kiệm" 
        Height="1020" Width="1180" 
        Background="#EBDFD7"
        WindowState="Maximized">

    <Window.Resources>
        <global:CmndToKhachHangConverter x:Key="CmndToKhachHangConverter"/>  
        <global:MaLoaiToTenConverter x:Key="MaLoaiToTenConverter"/>
        <global:RowIndexConverter x:Key="RowIndexConverter"/>
        <global:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <DropShadowEffect x:Key="DropShadowEffect" Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Tiêu đề -->
            <RowDefinition Height="Auto"/>
            <!-- Thanh công cụ -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,30,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"></ColumnDefinition>
                <ColumnDefinition Width="50*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Sổ tiết kiệm" FontFamily="Arial" FontStyle="Normal" FontWeight="Normal" FontSize="32" LineHeight="37" 
               VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#060606" TextAlignment="Center" Height="36" Width="167" Margin="30,0,0,0"/>

            <!-- Search bar -->
            <Border Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="#FFFFFF" 
                    CornerRadius="22" BorderBrush="#060606" BorderThickness="0.5" Margin="0,0,30,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="pack://application:,,,/QuanLyDaiLy;component/Resources/searchicon.png" Width="24" Height="24" VerticalAlignment="Center" Margin="24,0,0,0"/>
                    <Grid Grid.Column="1">
                        <TextBox Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                                 FontFamily="Arial" 
                                 FontSize="16" 
                                 Padding="13" 
                                 BorderThickness="0"
                                 Background="Transparent"
                                 VerticalContentAlignment="Center"
                                 HorizontalContentAlignment="Left"/>

                        <!-- <TextBlock Text="{Binding PlaceholderText, UpdateSourceTrigger=PropertyChanged}" -->
                        <!--            FontFamily="Arial"  -->
                        <!--            FontSize="16"  -->
                        <!--            Padding="13" -->
                        <!--            VerticalAlignment="Center"  -->
                        <!--            HorizontalAlignment="Left" -->
                        <!--            Foreground="Gray" -->
                        <!--            IsHitTestVisible="False" -->
                        <!--            Visibility="{Binding ElementName=txtSearch, Path=Text.Length, Converter={StaticResource BooleanToVisibilityConverter}}"/> -->
                    </Grid>
                </Grid>
            </Border>
        </Grid>

        <!-- Line -->
        <Border Grid.Row="1" HorizontalAlignment="Stretch" BorderBrush="#33000000" BorderThickness="1" Margin="30,10,30,0"/>

        <!-- Overview -->
        <Grid Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="30,20,30,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock Text="Loại tiết kiệm" FontFamily="Arial" FontStyle="Normal" FontWeight="Normal" FontSize="20" LineHeight="23" 
                      VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#060606" TextAlignment="Left" Height="30" Width="150"/>

               <ComboBox Width="200" Height="30" Margin="0,0,0,0" FontSize="20" SelectedIndex="0" Background="White" BorderThickness="0" Padding="15,0,15,0"
          ItemsSource="{Binding DanhSachLoaiTietKiem}"
          DisplayMemberPath="TenLoaiTietKiem"
          SelectedItem="{Binding LoaiTietKiemDuocChon, Mode=TwoWay}"
          SelectedValuePath="MaLoaiTietKiem">

    <ComboBox.Template>
        <ControlTemplate TargetType="{x:Type ComboBox}">
            <Grid>
                <!-- Viền ngoài -->
                <Border x:Name="border" CornerRadius="15" Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}">
                    <Grid>
                        <!-- Nút bật/tắt dropdown -->
                        <ToggleButton x:Name="toggleButton"
                                      BorderBrush="{TemplateBinding BorderBrush}"
                                      Background="{TemplateBinding Background}"
                                      BorderThickness="{TemplateBinding BorderThickness}"
                                      ClickMode="Press" Focusable="False"
                                      IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="{x:Type ToggleButton}">
                                    <Border x:Name="templateRoot"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="20">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Hiển thị item đã chọn -->
                                            <TextBlock VerticalAlignment="Center" Margin="15,0"
                                                       Text="{Binding SelectedItem.TenLoaiTietKiem, RelativeSource={RelativeSource AncestorType=ComboBox}}"/>

                                            <!-- Mũi tên dropdown -->
                                            <Path x:Name="Arrow" Grid.Column="1" Data="M0,0L4,4L8,0"
                                                  Fill="Black" HorizontalAlignment="Center"
                                                  Margin="0,0,5,0" VerticalAlignment="Center"/>
                                        </Grid>
                                    </Border>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                    </Grid>
                </Border>

                <!-- Popup Dropdown -->
                <Popup x:Name="PART_Popup" AllowsTransparency="True"
                       IsOpen="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                       Placement="Bottom"
                       PopupAnimation="{DynamicResource {x:Static SystemParameters.ComboBoxPopupAnimationKey}}">
                    <Border x:Name="dropDownBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="10"
                            MaxHeight="{TemplateBinding MaxDropDownHeight}"
                            MinWidth="{Binding ActualWidth, ElementName=border}">
                        <ScrollViewer x:Name="DropDownScrollViewer">
                            <ItemsPresenter x:Name="ItemsPresenter"
                                            KeyboardNavigation.DirectionalNavigation="Contained"
                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </ScrollViewer>
                    </Border>
                </Popup>
            </Grid>
        </ControlTemplate>
    </ComboBox.Template>
</ComboBox>

            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                <Button Width="120" Height="35" Background="#FFB498" Margin="0,0,10,0" Command="{Binding ThemSoTietKiemCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="buttonBorder" Background="{TemplateBinding Background}" 
                        CornerRadius="10" Padding="5,5,5,7">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="buttonBorder" Property="Background" Value="#FFA080"/>
                                    <Setter TargetName="buttonBorder" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.3" Color="#555555"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="buttonBorder" Property="Background" Value="#FF8060"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock Text="Thêm sổ" FontFamily="Segoe UI Variable" FontSize="18" FontWeight="Normal" 
                   TextAlignment="Center" Width="70" Height="34" Foreground="#92492D"/>
                </Button>

                <Button Width="120" Height="35" Background="#E65F2B" Foreground="White" Margin="0,0,10,0" Command="{Binding XoaSoTietKiemCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="buttonBorder" Background="{TemplateBinding Background}" 
                        CornerRadius="10" Padding="5,5,5,7">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="buttonBorder" Property="Background" Value="#F47346"/>
                                    <Setter TargetName="buttonBorder" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.3" Color="#555555"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="buttonBorder" Property="Background" Value="#D34816"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock Text="Xoá sổ" FontFamily="Segoe UI Variable" FontSize="18" FontWeight="SemiBold" 
                   TextAlignment="Center" Width="70" Height="34"/>
                </Button>

                <Button Width="150" Height="35" Background="#E65F2B" Foreground="White" Command="{Binding CapNhatSoTietKiemCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="buttonBorder" Background="{TemplateBinding Background}" 
                                    CornerRadius="10" Padding="5,5,5,7">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="buttonBorder" Property="Background" Value="#F47346"/>
                                    <Setter TargetName="buttonBorder" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.3" Color="#555555"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="buttonBorder" Property="Background" Value="#D34816"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock Text="Cập nhật sổ" FontFamily="Segoe UI Variable" FontSize="18" FontWeight="SemiBold" 
                   TextAlignment="Center" Width="100" Height="34"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- DataGrid -->
        <Border Grid.Row="3" Padding="30" CornerRadius="17" Background="#F2EAE5" Margin="30,100,30,0"  Effect="{StaticResource DropShadowEffect}">
            <!-- <DataGrid ItemsSource="{Binding DanhSachSoTietKiem}" AutoGenerateColumns="True" /> -->
            <DataGrid AutoGenerateColumns="False"
          ItemsSource="{Binding DanhSachSoTietKiem}"
          SelectedItem="{Binding SoTietKiemDuocChon, Mode=TwoWay}"
          HeadersVisibility="Column"
          CanUserAddRows="False"
          BorderThickness="0"
          Background="Transparent"
          SelectionUnit="FullRow"
          SelectionMode="Extended">
    
    <DataGrid.Columns>
        <!-- STT Column (Auto-increment) -->
            <DataGridTemplateColumn Header="STT" Width="50" IsReadOnly="True">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, 
                                             Converter={StaticResource RowIndexConverter}}" 
                                   HorizontalAlignment="Center"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
            
            <!-- CheckBox Column -->
            <DataGridTemplateColumn Header="Chọn" Width="50">
                <DataGridTemplateColumn.CellTemplate>
                    <DataTemplate>
                        <CheckBox HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Checked="CheckBox_Checked"
                                  Unchecked="CheckBox_Unchecked"
                                  Tag="{Binding MaSoTietKiem}"/>
                    </DataTemplate>
                </DataGridTemplateColumn.CellTemplate>
            </DataGridTemplateColumn>
            
            <!-- Existing Columns -->
            <DataGridTextColumn Header="Mã số" Binding="{Binding MaSoTietKiem}" Width="150"/>
            <DataGridTextColumn Header="Loại tiết kiệm" Width="200">
                <DataGridTextColumn.Binding>
                    <Binding Path="MaLoaiTietKiem" Converter="{StaticResource MaLoaiToTenConverter}" />
                </DataGridTextColumn.Binding>
            </DataGridTextColumn>
            <DataGridTextColumn Header="Khách hàng" Width="200">
                <DataGridTextColumn.Binding>
                    <Binding Path="CMND" Converter="{StaticResource CmndToKhachHangConverter}" />
                </DataGridTextColumn.Binding>
            </DataGridTextColumn>
            <DataGridTextColumn Header="Số dư" Binding="{Binding SoTienGui}" Width="150"/>
        </DataGrid.Columns>
</DataGrid>

