<Window x:Class="QuanLyDaiLy.Views.DanhSachSoTietKiem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:QuanLyDaiLy.ViewModels"
        Title="Danh Sách Sổ Tiết Kiệm" 
        Height="1020" Width="1180" 
        Background="#EBDFD7"
        WindowState="Maximized">

    <Window.Resources>
        <DropShadowEffect x:Key="DropShadowEffect" Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.5"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <!-- Tiêu đề -->
            <RowDefinition Height="Auto"/>
            <!-- Thanh công cụ -->
            <RowDefinition Height="Auto"/>
            <!-- DataGrid -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,30,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*"></ColumnDefinition>
                <ColumnDefinition Width="50*"></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Sổ tiết kiệm" FontFamily="Arial" FontStyle="Normal" FontWeight="Normal" FontSize="32" LineHeight="37" 
               VerticalAlignment="Top" HorizontalAlignment="Left" Foreground="#060606" TextAlignment="Center" Height="36" Width="167" Margin="30,0,0,0"/>

            <!-- Search bar -->
            <Border Grid.Column="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="#FFFFFF" 
                    CornerRadius="22" BorderBrush="#060606" BorderThickness="0.5" Margin="0,0,30,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Image Source="pack://application:,,,/QuanLyDaiLy;component/Resources/searchicon.png" Width="24" Height="24" VerticalAlignment="Center" Margin="24,0,0,0"/>
                    <TextBox Grid.Column="1" FontFamily="Arial" FontSize="16" Padding="13" Text="Tìm kiếm sổ tiết kiệm" BorderThickness="0"
                             Background="Transparent" VerticalContentAlignment="Center" HorizontalContentAlignment="Left"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Line -->
        <Border Grid.Row="1" HorizontalAlignment="Stretch" BorderBrush="#33000000" BorderThickness="1" Margin="30,10,30,0"/>

        <!-- Overview -->
        <Grid Grid.Row="2" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="30,20,30,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                <TextBlock Text="Loại tiết kiệm" FontFamily="Arial" FontStyle="Normal" FontWeight="Normal" FontSize="20" LineHeight="23" 
                      VerticalAlignment="Center" HorizontalAlignment="Left" Foreground="#060606" TextAlignment="Left" Height="30" Width="150"/>

                <ComboBox Width="200" Height="30" Margin="0,0,0,0" FontSize="20" SelectedIndex="0" Background="White" BorderThickness="0" Padding="15,0,15,0">
                    <ComboBox.Template>
                        <ControlTemplate TargetType="{x:Type ComboBox}">
                            <Grid>
                                <Border x:Name="border" CornerRadius="15" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                    <Grid>
                                        <ToggleButton x:Name="toggleButton" BorderBrush="{TemplateBinding BorderBrush}" Background="{TemplateBinding Background}" BorderThickness="{TemplateBinding BorderThickness}" ClickMode="Press" Focusable="False" IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                            <ToggleButton.Template>
                                                <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                    <Border x:Name="templateRoot" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="20">
                                                        <Border.Effect>
                                                            <DropShadowEffect BlurRadius="0" ShadowDepth="0" Opacity="0"/>
                                                        </Border.Effect>
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                            </Grid.ColumnDefinitions>
                                                            <ContentPresenter ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" ContentStringFormat="{TemplateBinding ContentStringFormat}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" IsHitTestVisible="False" Margin="{TemplateBinding Padding}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                            <Path x:Name="Arrow" Grid.Column="1" Data="M0,0L4,4L8,0" Fill="Black" HorizontalAlignment="Center" Margin="0,0,5,0" VerticalAlignment="Center"/>
                                                        </Grid>
                                                    </Border>
                                                </ControlTemplate>
                                            </ToggleButton.Template>
                                        </ToggleButton>
                                        <ContentPresenter ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" Content="{TemplateBinding SelectionBoxItem}" ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}" HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" IsHitTestVisible="False" Margin="{TemplateBinding Padding}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                    </Grid>
                                </Border>
                                <Popup x:Name="PART_Popup" AllowsTransparency="True" IsOpen="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}" Placement="Bottom" PopupAnimation="{DynamicResource {x:Static SystemParameters.ComboBoxPopupAnimationKey}}">
                                    <Border x:Name="dropDownBorder" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="10" MaxHeight="{TemplateBinding MaxDropDownHeight}" MinWidth="{Binding ActualWidth, ElementName=border}">
                                        <ScrollViewer x:Name="DropDownScrollViewer">
                                            <ItemsPresenter x:Name="ItemsPresenter" KeyboardNavigation.DirectionalNavigation="Contained" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                        </ScrollViewer>
                                    </Border>
                                </Popup>
                            </Grid>
                        </ControlTemplate>
                    </ComboBox.Template>
                    <ComboBox.Items>
                        <ComboBoxItem Content="Tất cả"/>
                        <ComboBoxItem Content="Không kỳ hạn"/>
                        <ComboBoxItem Content="3 tháng"/>
                        <ComboBoxItem Content="6 tháng"/>
                    </ComboBox.Items>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Right">
                <Button Width="120" Height="35" Background="#FFB498" Margin="0,0,10,0" Command="{Binding ThemSoTietKiemCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="buttonBorder" Background="{TemplateBinding Background}" 
                        CornerRadius="10" Padding="5,5,5,7">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="buttonBorder" Property="Background" Value="#FFA080"/>
                                    <Setter TargetName="buttonBorder" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.3" Color="#555555"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="buttonBorder" Property="Background" Value="#FF8060"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock Text="Thêm sổ" FontFamily="Segoe UI Variable" FontSize="18" FontWeight="Normal" 
                   TextAlignment="Center" Width="70" Height="34" Foreground="#92492D"/>
                </Button>

                <Button Width="120" Height="35" Background="#E65F2B" Foreground="White" Margin="0,0,10,0">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="buttonBorder" Background="{TemplateBinding Background}" 
                        CornerRadius="10" Padding="5,5,5,7">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="buttonBorder" Property="Background" Value="#F47346"/>
                                    <Setter TargetName="buttonBorder" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.3" Color="#555555"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="buttonBorder" Property="Background" Value="#D34816"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock Text="Xoá sổ" FontFamily="Segoe UI Variable" FontSize="18" FontWeight="SemiBold" 
                   TextAlignment="Center" Width="70" Height="34"/>
                </Button>

                <Button Width="150" Height="35" Background="#E65F2B" Foreground="White" Command="{Binding CapNhatSoTietKiemCommand}">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="buttonBorder" Background="{TemplateBinding Background}" 
                                    CornerRadius="10" Padding="5,5,5,7">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="buttonBorder" Property="Background" Value="#F47346"/>
                                    <Setter TargetName="buttonBorder" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect BlurRadius="5" ShadowDepth="1" Opacity="0.3" Color="#555555"/>
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="buttonBorder" Property="Background" Value="#D34816"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock Text="Cập nhật sổ" FontFamily="Segoe UI Variable" FontSize="18" FontWeight="SemiBold" 
                   TextAlignment="Center" Width="100" Height="34"/>
                </Button>
            </StackPanel>
        </Grid>

        <!-- DataGrid -->
        <Border Grid.Row="3" Padding="30" CornerRadius="17" Background="#F2EAE5" Margin="30,18,30,0"  Effect="{StaticResource DropShadowEffect}">
            <DataGrid AutoGenerateColumns="False" GridLinesVisibility="None" 
              HeadersVisibility="Column" CanUserAddRows="False" BorderThickness="0" LoadingRow="DataGrid_LoadingRow" Background="Transparent">
                <DataGrid.Resources>
                    <!-- Style cho header -->
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center"/>
                        <Setter Property="Background" Value="#F2EAE5"/>
                        <Setter Property="Foreground" Value="#060606"/>
                        <Setter Property="FontFamily" Value="Arial"/>
                        <Setter Property="FontStyle" Value="Normal"/>
                        <Setter Property="FontWeight" Value="Normal"/>
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="Padding" Value="0,0,0,0"/>
                        <Setter Property="BorderThickness" Value="0,0,0,0.5"/>
                        <Setter Property="BorderBrush" Value="#060606"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Grid>
                                        <Border Background="{TemplateBinding Background}" 
                                        BorderBrush="{TemplateBinding BorderBrush}" 
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        Padding="5,0,5,0">
                                            <ContentPresenter VerticalAlignment="Center"
                                                     HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"/>
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.Resources>

                <DataGrid.CellStyle>
                    <Style TargetType="DataGridCell">
                        <Setter Property="FontFamily" Value="Arial"/>
                        <Setter Property="FontStyle" Value="Normal"/>
                        <Setter Property="FontWeight" Value="Normal"/>
                        <Setter Property="FontSize" Value="20"/>
                        <Setter Property="Foreground" Value="#060606"/>
                        <Setter Property="Background" Value="#F2EAE5"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="8,16,8,8"/>
                        <Setter Property="Height" Value="55"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                                        <ContentPresenter VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="ContentTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" 
                                       FontFamily="Arial" 
                                       FontStyle="Normal" 
                                       FontWeight="Normal" 
                                       FontSize="20" 
                                       LineHeight="23" 
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left" 
                                       TextAlignment="Left"/>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.CellStyle>

                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Height" Value="55"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                </DataGrid.RowStyle>

                <DataGrid.Columns>
                    <DataGridTextColumn Header="STT" Width="100" FontSize="20">
                        <DataGridTextColumn.HeaderStyle>
                            <Style TargetType="DataGridColumnHeader" BasedOn="{StaticResource {x:Type DataGridColumnHeader}}">
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                                <Setter Property="Padding" Value="0,0,0,0"/>
                                <Setter Property="ContentTemplate">
                                    <Setter.Value>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" 
                                               FontFamily="Arial" 
                                               FontSize="20" 
                                               FontWeight="Normal" 
                                               LineHeight="23" 
                                               VerticalAlignment="Center"
                                               HorizontalAlignment="Left"/>
                                        </DataTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGridTextColumn.HeaderStyle>
                    </DataGridTextColumn>

                    <DataGridCheckBoxColumn Header="Chọn" Width="100">
                        <DataGridCheckBoxColumn.ElementStyle>
                            <Style TargetType="CheckBox">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="Margin" Value="8,0,0,0"/>
                            </Style>
                        </DataGridCheckBoxColumn.ElementStyle>
                    </DataGridCheckBoxColumn>

                    <DataGridTextColumn Header="Mã số" Width="100">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="TextAlignment" Value="Left"/>
                                <Setter Property="LineHeight" Value="23"/>
                                <Setter Property="Padding" Value="0"/>
                                <Setter Property="Margin" Value="0"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Loại tiết kiệm" Width="300">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="TextAlignment" Value="Left"/>
                                <Setter Property="LineHeight" Value="23"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Khách hàng" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="TextAlignment" Value="Left"/>
                                <Setter Property="LineHeight" Value="23"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <DataGridTextColumn Header="Số dư" Width="300">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="HorizontalAlignment" Value="Left"/>
                                <Setter Property="TextAlignment" Value="Left"/>
                                <Setter Property="LineHeight" Value="23"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>