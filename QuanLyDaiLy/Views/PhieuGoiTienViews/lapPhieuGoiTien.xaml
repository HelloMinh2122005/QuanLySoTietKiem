<Window
    x:Class="QuanLyDaiLy.Views.lapPhieuGoiTien"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="lapPhieuGoiTien"
    Width="600"
    Height="480"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  6% black stroke  -->
        <SolidColorBrush x:Key="ControlStrokeDefaultBrush" Color="#0F000000" />

        <!--  80% white background  -->
        <SolidColorBrush x:Key="LayerOnMicaBaseAltDefaultBrush" Color="#CCFFFFFF" />
    </Window.Resources>

    <Border
        Background="#EBDFD7"
        BorderBrush="{StaticResource ControlStrokeDefaultBrush}"
        BorderThickness="1"
        CornerRadius="12">
        <Grid Background="{StaticResource LayerOnMicaBaseAltDefaultBrush}">
            <!--  Apply clip to ensure the content doesn't overflow the rounded corners  -->
            <Grid.Clip>
                <RectangleGeometry
                    RadiusX="12"
                    RadiusY="12"
                    Rect="0,0,600,480" />
            </Grid.Clip>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>

            <!--  Content Wrapper  -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="1" />
                </Grid.RowDefinitions>

                <!--  Content  -->
                <Grid Grid.Row="0" Margin="24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="1" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="60" />
                    </Grid.RowDefinitions>


                    <!--  Frame 3  -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontFamily="Segoe UI Variable"
                            FontSize="20"
                            FontStyle="Normal"
                            FontWeight="SemiBold"
                            Foreground="#000000"
                            Text="Lập phiếu gởi tiền" />

                        <!--  Close button  -->
                        <Button
                            Grid.Column="1"
                            Width="46"
                            Height="32"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding CloseCommand}">
                            <TextBlock
                                Width="16"
                                Height="16"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Segoe Fluent Icons"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="&#xE10A;"
                                TextAlignment="Center" />
                        </Button>
                    </Grid>
                    <!--  Divider  -->
                    <Border
                        Grid.Row="2"
                        Width="492"
                        Height="1"
                        BorderBrush="#33000000"
                        BorderThickness="1" />

                    <!--  Line 1  -->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <!--  2 cột chính, ngăn cách bởi khoảng 12px  -->
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <!--  Mã phiếu  -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                Foreground="#000000"
                                Text="Mã phiếu gởi tiền" />
                            <Border
                                Grid.Row="1"
                                Height="30"
                                Padding="3"
                                VerticalAlignment="Center"
                                Background="#CBC7C4"
                                CornerRadius="4">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Background="#CBC7C4"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    Foreground="Black"
                                    IsReadOnly="True"
                                    Text="{Binding MaPhieuGoiTien, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Left" />
                            </Border>
                        </Grid>

                        <!--  Ngày gởi tiền  -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                Foreground="#000000"
                                Text="Ngày gởi tiền" />
                            <Border
                                Grid.Row="1"
                                Height="30"
                                Padding="2"
                                VerticalAlignment="Center"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                CornerRadius="4">
                                <DatePicker
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#FFFFFF"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    Foreground="Black"
                                    SelectedDate="{Binding NgayGoi}">
                                    <DatePicker.Resources>
                                        <Style x:Key="HideCalendarButton" TargetType="Button">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                            </Border>
                        </Grid>
                    </Grid>


                    <!--  Line 2  -->
                    <Grid Grid.Row="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <!--  Mã tiết kiệm  -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="Mã tiết kiệm" />
                            <Border
                                Grid.Row="1"
                                Height="30"
                                Padding="3"
                                VerticalAlignment="Center"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                CornerRadius="4">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#FFFFFF"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    Foreground="Black"
                                    Text="{Binding MaSoTietKiem, UpdateSourceTrigger=LostFocus}"
                                    TextAlignment="Left" />
                            </Border>
                        </Grid>

                        <!--  Tên loại sổ  -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="Tên loại sổ tiết kiệm" />
                            <Border
                                Grid.Row="1"
                                Height="30"
                                Padding="3"
                                VerticalAlignment="Center"
                                Background="#CBC7C4"
                                CornerRadius="4">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#CBC7C4"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    IsReadOnly="True"
                                    FontStyle="Normal"
                                    Foreground="Black"
                                    Text="{Binding TenLoaiTietKiem, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Left" />
                            </Border>
                        </Grid>
                    </Grid>

                    <!--  Line 3  -->
                    <Grid Grid.Row="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <!--  Họ tên khách hàng  -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="Họ tên khách hàng" />
                            <Border
                                Grid.Row="1"
                                Height="30"
                                Padding="3"
                                VerticalAlignment="Center"
                                Background="#CBC7C4"
                                CornerRadius="4">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#CBC7C4"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    Foreground="Black"
                                    IsReadOnly="True"
                                    Text="{Binding TenKhachHang, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Left" />
                            </Border>
                        </Grid>

                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="Nhận tiền gởi thêm" />
                            <Border
                                Grid.Row="1"
                                Height="30"
                                Padding="3"
                                VerticalAlignment="Center"
                                Background="#CBC7C4"
                                CornerRadius="4">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Background="#CBC7C4"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    Foreground="Black"
                                    IsReadOnly="True"
                                    Text="{Binding FieldStatusText, Mode=OneWay}"
                                    TextAlignment="Left" />
                            </Border>
                        </Grid>
                    </Grid>

                    <!--  Line 4  -->
                    <Grid Grid.Row="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <!--  Số tiền gởi thêm  -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="Số tiền gởi thêm" />
                            <Border
                                Grid.Row="1"
                                Height="30"
                                Padding="3"
                                VerticalAlignment="Center"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                CornerRadius="4">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#FFFFFF"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    Foreground="Black"
                                    Text="{Binding SoTienGui, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Left" />
                            </Border>
                        </Grid>

                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="Số tiền gởi thêm tối thiểu" />
                            <Border
                                Grid.Row="1"
                                Height="30"
                                Padding="3"
                                VerticalAlignment="Center"
                                Background="#CBC7C4"
                                CornerRadius="4">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Background="#CBC7C4"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    Foreground="Black"
                                    IsReadOnly="True"
                                    Text="Đang áp dụng"
                                    TextAlignment="Left" />
                            </Border>
                        </Grid>
                    </Grid>
                </Grid>

                <!--  Divider  -->
                <Border
                    Grid.Row="1"
                    Width="540"
                    Height="1"
                    BorderBrush="#33000000"
                    BorderThickness="1" />
            </Grid>

            <!--  List Nude  -->
            <Grid
                Grid.Row="1"
                Height="80"
                VerticalAlignment="Center"
                Background="#EBDFD7">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <Button
                        Width="120"
                        Height="35"
                        Margin="0,0,20,0"
                        Background="#FFB498"
                        Command="{Binding LapPhieuCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="buttonBorder"
                                    Padding="5,5,5,7"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FFA080" />
                                        <Setter TargetName="buttonBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect
                                                    BlurRadius="5"
                                                    Opacity="0.3"
                                                    ShadowDepth="1"
                                                    Color="#555555" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FF8060" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock
                            FontFamily="Segoe UI Variable"
                            FontSize="18"
                            FontWeight="Normal"
                            Foreground="#92492D"
                            Text="Lập phiếu"
                            TextAlignment="Center" />
                    </Button>
                    <Button
                        Height="35"
                        Margin="0,0,20,0"
                        Background="#FFB498"
                        Command="{Binding TraCuuSoCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="buttonBorder"
                                    Padding="5,5,5,7"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FFA080" />
                                        <Setter TargetName="buttonBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect
                                                    BlurRadius="5"
                                                    Opacity="0.3"
                                                    ShadowDepth="1"
                                                    Color="#555555" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FF8060" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock
                            FontFamily="Segoe UI Variable"
                            FontSize="18"
                            FontWeight="Normal"
                            Foreground="#92492D"
                            Text="Tra cứu sổ tiết kiệm"
                            TextAlignment="Center" />
                    </Button>
                    <Button
                        Width="120"
                        Height="35"
                        Background="#FFB498"
                        Command="{Binding CloseCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="buttonBorder"
                                    Padding="5,5,5,7"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FFA080" />
                                        <Setter TargetName="buttonBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect
                                                    BlurRadius="5"
                                                    Opacity="0.3"
                                                    ShadowDepth="1"
                                                    Color="#555555" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FF8060" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock
                            Width="70"
                            FontFamily="Segoe UI Variable"
                            FontSize="18"
                            FontWeight="Normal"
                            Foreground="#92492D"
                            Text="Thoát"
                            TextAlignment="Center" />
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>