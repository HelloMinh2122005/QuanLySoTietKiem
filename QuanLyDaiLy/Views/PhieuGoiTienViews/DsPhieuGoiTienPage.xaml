<Page
    x:Class="QuanLyDaiLy.Views.PhieuGoiTienViews.DsPhieuGoiTien"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:QuanLyDaiLy.Helpers"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DsPhieuGoiTien"
    d:DesignHeight="930"
    d:DesignWidth="1580"
    Background="#EBDFD7"
    mc:Ignorable="d">

    <Page.Resources>
        <DropShadowEffect
            x:Key="DropShadowEffect"
            BlurRadius="10"
            Opacity="0.5"
            ShadowDepth="0"
            Color="Black" />
        <helpers:ComboBoxItemConverter x:Key="ComboBoxItemConverter" />

        <!--  ComboBox Style  -->
        <Style x:Key="StyledComboBox" TargetType="{x:Type ComboBox}">
            <Setter Property="Background" Value="#FFFFFF" />
            <Setter Property="BorderBrush" Value="#33000000" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Width" Value="300" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="FontFamily" Value="Nunito" />
            <Setter Property="FontStyle" Value="Normal" />
            <Setter Property="FontWeight" Value="Normal" />
            <Setter Property="FontSize" Value="18" />
            <Setter Property="Foreground" Value="#000000" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="ItemTemplate">
                <Setter.Value>
                    <DataTemplate>
                        <TextBlock Text="{Binding TenLoaiTietKiem}" />
                    </DataTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBox}">
                        <Grid>
                            <Border
                                x:Name="mainBorder"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10">
                                <Grid>
                                    <ToggleButton
                                        x:Name="toggleButton"
                                        Background="Transparent"
                                        BorderBrush="Transparent"
                                        ClickMode="Press"
                                        Focusable="false"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                        <ToggleButton.Template>
                                            <ControlTemplate TargetType="ToggleButton">
                                                <Grid Background="Transparent">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="30" />
                                                    </Grid.ColumnDefinitions>
                                                    <Border Grid.ColumnSpan="2" Background="Transparent" />
                                                    <Path
                                                        x:Name="arrow"
                                                        Grid.Column="1"
                                                        Width="12"
                                                        Height="12"
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Data="M7 10l5 5 5-5z"
                                                        Fill="#9A000000"
                                                        Stretch="Fill" />
                                                </Grid>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="true">
                                                        <Setter TargetName="arrow" Property="Fill" Value="#E65F2B" />
                                                    </Trigger>
                                                    <Trigger Property="IsChecked" Value="true">
                                                        <Setter TargetName="arrow" Property="Fill" Value="#E65F2B" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </ToggleButton.Template>
                                    </ToggleButton>

                                    <TextBlock
                                        x:Name="contentText"
                                        Margin="10,0,30,0"
                                        VerticalAlignment="Center"
                                        Text="{TemplateBinding SelectionBoxItem,
                                                               Converter={StaticResource ComboBoxItemConverter}}" />
                                </Grid>
                            </Border>

                            <Popup
                                x:Name="PART_Popup"
                                AllowsTransparency="True"
                                Focusable="False"
                                IsOpen="{Binding IsChecked, ElementName=toggleButton}"
                                Placement="Bottom"
                                PopupAnimation="Slide">
                                <Border
                                    x:Name="dropDownBorder"
                                    MinWidth="{TemplateBinding ActualWidth}"
                                    Margin="0,1,0,0"
                                    Background="#FFFFFF"
                                    BorderBrush="#33000000"
                                    BorderThickness="1"
                                    CornerRadius="8"
                                    Effect="{StaticResource DropShadowEffect}">
                                    <ScrollViewer MaxHeight="200" SnapsToDevicePixels="True">
                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="mainBorder" Property="BorderBrush" Value="#0088CC" />
                            </Trigger>
                            <Trigger Property="IsDropDownOpen" Value="True">
                                <Setter TargetName="mainBorder" Property="BorderBrush" Value="#0088CC" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="mainBorder" Property="Opacity" Value="0.6" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!--  ComboBoxItem Style  -->
        <Style x:Key="StyledComboBoxItem" TargetType="{x:Type ComboBoxItem}">
            <Setter Property="Padding" Value="8,6" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ComboBoxItem}">
                        <Border
                            x:Name="ItemBorder"
                            Margin="2,1"
                            Padding="{TemplateBinding Padding}"
                            Background="Transparent"
                            CornerRadius="5">
                            <ContentPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#E3F2FD" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#BBDEFB" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <!--  Tiêu đề  -->
            <RowDefinition Height="Auto" />
            <!--  Thanh công cụ  -->
            <RowDefinition Height="*" />
            <!--  DataGrid  -->
        </Grid.RowDefinitions>

        <!--  Header  -->
        <Grid
            Grid.Row="0"
            Margin="0,30,0,0"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50*" />
                <ColumnDefinition Width="50*" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Height="36"
                Margin="30,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontFamily="Arial"
                FontSize="32"
                FontStyle="Normal"
                FontWeight="Normal"
                Foreground="#060606"
                LineHeight="37"
                Text="Phiếu gửi tiền"
                TextAlignment="Center" />

            <!--  Search bar  -->
            <Border
                Grid.Column="1"
                Margin="0,0,30,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                Background="#FFFFFF"
                BorderBrush="#060606"
                BorderThickness="0.5"
                CornerRadius="22">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Image
                        Width="24"
                        Height="24"
                        Margin="24,0,0,0"
                        VerticalAlignment="Center"
                        Source="pack://application:,,,/QuanLyDaiLy;component/Resources/searchicon.png" />
                    <TextBox
                        Grid.Column="1"
                        Padding="13"
                        HorizontalContentAlignment="Left"
                        VerticalContentAlignment="Center"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Arial"
                        FontSize="16"
                        Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>
            </Border>
        </Grid>

        <!--  Line  -->
        <Border
            Grid.Row="1"
            Margin="30,10,30,0"
            HorizontalAlignment="Stretch"
            BorderBrush="#33000000"
            BorderThickness="1" />

        <!--  Overview  -->
        <Grid
            Grid.Row="2"
            Margin="30,20,30,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Stretch">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel>
                <Button
                    Height="35"
                    Background="#FFB498"
                    Command="{Binding LapPhieuGoiTienCommand}"
                    Foreground="#92492D">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border
                                x:Name="buttonBorder"
                                Padding="5,5,5,7"
                                Background="{TemplateBinding Background}"
                                CornerRadius="10">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="buttonBorder" Property="Background" Value="#FFA080" />
                                    <Setter TargetName="buttonBorder" Property="Effect">
                                        <Setter.Value>
                                            <DropShadowEffect
                                                BlurRadius="5"
                                                Opacity="0.3"
                                                ShadowDepth="1"
                                                Color="#555555" />
                                        </Setter.Value>
                                    </Setter>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter TargetName="buttonBorder" Property="Background" Value="#FF8060" />
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                    <TextBlock
                        Width="200"
                        Height="34"
                        FontFamily="Segoe UI Variable"
                        FontSize="18"
                        FontWeight="SemiBold"
                        Text="+ Thêm phiếu gửi tiền"
                        TextAlignment="Center" />
                </Button>
            </StackPanel>

        </Grid>

        <!--  DataGrid  -->
        <Border
            Grid.Row="3"
            Margin="30,18,30,20"
            Padding="30"
            VerticalAlignment="Stretch"
            Background="#F2EAE5"
            CornerRadius="17"
            Effect="{StaticResource DropShadowEffect}">
            <DataGrid
                VerticalAlignment="Stretch"
                AutoGenerateColumns="False"
                Background="Transparent"
                BorderThickness="0"
                CanUserAddRows="False"
                GridLinesVisibility="None"
                HeadersVisibility="Column"
                IsReadOnly="True"
                ItemsSource="{Binding FilteredDanhSachPhieuGoiTien}"
                LoadingRow="DataGrid_LoadingRow"
                SelectedItem="{Binding SelectedPhieuGoiTien, Mode=TwoWay}">
                <DataGrid.Resources>
                    <!-- Don't blow up to white on inactive -->
                    <SolidColorBrush x:Key="{x:Static Member=SystemColors.InactiveSelectionHighlightBrushKey}"
                        Color="#FFB498" />
                    <!--  Cell style (kept unchanged)  -->
                    <Style TargetType="DataGridCell">
                        <Style.Resources>
                            <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="#FFB498" />
                        </Style.Resources>
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                        <Setter Property="Padding" Value="10,0" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridCell">
                                    <Border
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        SnapsToDevicePixels="True">
                                        <ContentPresenter
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.Resources>

                <!--  RowStyle with triggers that add effects without changing original colors  -->
                <DataGrid.RowStyle>
                    <Style TargetType="DataGridRow">
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderThickness" Value="0,0,0,1" />
                        <Setter Property="BorderBrush" Value="#E0E0E0" />
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <SolidColorBrush Color="Wheat"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.RowStyle>

                <!--  ColumnHeaderStyle kept as original  -->
                <DataGrid.ColumnHeaderStyle>
                    <Style TargetType="DataGridColumnHeader">
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="Background" Value="#F2EAE5" />
                        <Setter Property="Foreground" Value="#060606" />
                        <Setter Property="FontFamily" Value="Arial" />
                        <Setter Property="FontStyle" Value="Normal" />
                        <Setter Property="FontWeight" Value="Normal" />
                        <Setter Property="FontSize" Value="24" />
                        <Setter Property="Padding" Value="0,0,0,0" />
                        <Setter Property="BorderThickness" Value="0,0,0,0.5" />
                        <Setter Property="BorderBrush" Value="#060606" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="Height" Value="40" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="DataGridColumnHeader">
                                    <Grid>
                                        <Border
                                            Padding="5,0,5,0"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}">
                                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="Center" />
                                        </Border>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </DataGrid.ColumnHeaderStyle>

                <!--  Columns (unchanged)  -->
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="Auto" Header="STT">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    FontSize="20"
                                    Text="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type DataGridRow}}, Path=Header}"
                                    TextAlignment="Center">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                                    <Setter Property="Foreground" Value="Black" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!--  Mã phiếu Column  -->
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding MaPhieuGoiTien}"
                        Header="Mã phiếu">
                        <DataGridTextColumn.ElementStyle>
                            <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="TextAlignment" Value="Center" />
                                <Setter Property="LineHeight" Value="23" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="FontSize" Value="20" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                        <Setter Property="Foreground" Value="Black" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!--  Mã sổ Column  -->
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding MaSoTietKiem}"
                        Header="Mã sổ">
                        <DataGridTextColumn.ElementStyle>
                            <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="TextAlignment" Value="Center" />
                                <Setter Property="LineHeight" Value="23" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="FontSize" Value="20" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                        <Setter Property="Foreground" Value="Black" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!--  Loại tiết kiệm Column  -->
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding LoaiTietKiem}"
                        Header="Loại tiết kiệm">
                        <DataGridTextColumn.ElementStyle>
                            <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="TextAlignment" Value="Center" />
                                <Setter Property="LineHeight" Value="23" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="FontSize" Value="20" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                        <Setter Property="Foreground" Value="Black" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!--  Tên khách hàng Column  -->
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding TenKhachHang}"
                        Header="Tên khách hàng">
                        <DataGridTextColumn.ElementStyle>
                            <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="TextAlignment" Value="Left" />
                                <Setter Property="LineHeight" Value="23" />
                                <Setter Property="Padding" Value="0" />
                                <Setter Property="Margin" Value="0" />
                                <Setter Property="FontSize" Value="20" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                        <Setter Property="Foreground" Value="Black" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!--  Ngày gửi Column  -->
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding NgayGoi, StringFormat='{}{0:dd/MM/yyyy}'}"
                        Header="Ngày gửi">
                        <DataGridTextColumn.ElementStyle>
                            <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="TextAlignment" Value="Center" />
                                <Setter Property="LineHeight" Value="23" />
                                <Setter Property="FontSize" Value="20" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                        <Setter Property="Foreground" Value="Black" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!--  Số tiền gửi Column  -->
                    <DataGridTextColumn
                        Width="*"
                        Binding="{Binding SoTienGui, StringFormat='{}{0:N0} VNĐ'}"
                        Header="Số tiền gửi">
                        <DataGridTextColumn.ElementStyle>
                            <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="HorizontalAlignment" Value="Right" />
                                <Setter Property="TextAlignment" Value="Right" />
                                <Setter Property="LineHeight" Value="23" />
                                <Setter Property="FontSize" Value="20" />
                                <Setter Property="Padding" Value="0,0,10,0" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=DataGridRow}, Path=IsSelected}" Value="True">
                                        <Setter Property="Foreground" Value="Black" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Page>
