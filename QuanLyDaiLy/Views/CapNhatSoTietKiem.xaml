<Window
    x:Class="QuanLyDaiLy.Views.CapNhatSoTietKiem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="555"
    Height="388"
    AllowsTransparency="True"
    Background="Transparent"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.Resources>
        <!--  6% black stroke  -->
        <SolidColorBrush x:Key="ControlStrokeDefaultBrush" Color="#0F000000" />

        <!--  40% gray stroke  -->
        <SolidColorBrush x:Key="SurfaceStrokeDefaultBrush" Color="#66757575" />

        <!--  80% white background  -->
        <SolidColorBrush x:Key="LayerOnMicaBaseAltDefaultBrush" Color="#CCFFFFFF" />
    </Window.Resources>

    <Border
        Background="#EBDFD7"
        BorderBrush="{StaticResource ControlStrokeDefaultBrush}"
        BorderThickness="1"
        CornerRadius="12">
        <Grid Background="{StaticResource LayerOnMicaBaseAltDefaultBrush}">
            <!--  Apply clip to ensure the content doesn't overflow the rounded corners  -->
            <Grid.Clip>
                <RectangleGeometry
                    RadiusX="12"
                    RadiusY="12"
                    Rect="0,0,553,388" />
            </Grid.Clip>
            <Grid.RowDefinitions>
                <RowDefinition Height="308" />
                <RowDefinition Height="80" />
            </Grid.RowDefinitions>

            <!--  Content Wrapper  -->
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="307" />
                    <RowDefinition Height="1" />
                </Grid.RowDefinitions>

                <!--  Content  -->
                <Grid Grid.Row="0" Margin="24">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="32" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="1" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="60" />
                        <RowDefinition Height="12" />
                        <RowDefinition Height="60" />
                    </Grid.RowDefinitions>

                    <!--  Frame 3  -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontFamily="Segoe UI Variable"
                            FontSize="20"
                            FontStyle="Normal"
                            FontWeight="SemiBold"
                            Foreground="#000000"
                            Text="Cập nhật sổ tiêt kiệm" />

                        <!--  Close button  -->
                        <Button
                            Grid.Column="1"
                            Width="46"
                            Height="32"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center"
                            Background="Transparent"
                            BorderThickness="0"
                            Command="{Binding CloseCommand}">
                            <TextBlock
                                Width="16"
                                Height="16"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                FontFamily="Segoe Fluent Icons"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="&#xE10A;"
                                TextAlignment="Center" />
                        </Button>
                    </Grid>
                    <!--  Divider  -->
                    <Border
                        Grid.Row="2"
                        Width="492"
                        Height="1"
                        BorderBrush="#33000000"
                        BorderThickness="1" />

                    <!--  Line 1  -->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="156" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="156" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="156" />
                        </Grid.ColumnDefinitions>

                        <!--  Mã Sổ  -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="Mã sổ" />
                            <Border
                                Grid.Row="1"
                                Height="30"
                                Padding="3"
                                VerticalAlignment="Center"
                                Background="#CBC7C4"
                                CornerRadius="4">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Background="#CBC7C4"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    Foreground="Black"
                                    IsReadOnly="True"
                                    Text="{Binding MaSoTietKiem, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Left" />
                            </Border>
                        </Grid>

                        <!--  CMND  -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="CMND" />
                            <Border
                                Grid.Row="1"
                                Height="30"
                                Padding="3"
                                VerticalAlignment="Center"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                CornerRadius="4">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#FFFFFF"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    Foreground="Black"
                                    Text="{Binding Cmnd, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Left" />
                            </Border>
                        </Grid>

                        <!--  Tên khách hàng  -->
                        <Grid Grid.Column="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="Tên khách hàng" />
                            <Border
                                Grid.Row="1"
                                Height="30"
                                Padding="3"
                                VerticalAlignment="Center"
                                Background="#CBC7C4"
                                CornerRadius="4">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    VerticalContentAlignment="Center"
                                    Background="#CBC7C4"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    Foreground="Black"
                                    IsReadOnly="True"
                                    Text="{Binding TenKhachHang, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Left" />
                            </Border>
                        </Grid>
                    </Grid>

                    <!--  Line 2  -->
                    <Grid Grid.Row="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="156" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="156" />
                            <ColumnDefinition Width="12" />
                            <ColumnDefinition Width="156" />
                        </Grid.ColumnDefinitions>

                        <!--  Số tiền gởi  -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="Số tiền gởi" />
                            <Border
                                Grid.Row="1"
                                Height="30"
                                Padding="3"
                                VerticalAlignment="Center"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                CornerRadius="4">
                                <TextBox
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#FFFFFF"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    Foreground="Black"
                                    Text="{Binding SoTienGui, UpdateSourceTrigger=PropertyChanged}"
                                    TextAlignment="Left" />
                            </Border>
                        </Grid>

                        <!--  Loại tiết kiệm  -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="Loại tiết kiệm" />
                            <ComboBox
                                Grid.Row="1"
                                Width="152"
                                Height="30"
                                Margin="0,3"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                VerticalContentAlignment="Center"
                                Background="#FFFFFF"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                DisplayMemberPath="TenLoaiTietKiem"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="Black"
                                ItemsSource="{Binding DsLoaiTietKiem}"
                                SelectedItem="{Binding LoaiTietKiemDuocChon, Mode=TwoWay}"
                                SelectedValuePath="MaLoaiTietKiem">
                                <ComboBox.Template>
                                    <ControlTemplate TargetType="{x:Type ComboBox}">
                                        <Grid>
                                            <Border
                                                x:Name="mainBorder"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="5">
                                                <Grid>
                                                    <ToggleButton
                                                        x:Name="toggleButton"
                                                        Background="Transparent"
                                                        BorderBrush="Transparent"
                                                        ClickMode="Press"
                                                        Focusable="false"
                                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                                        <ToggleButton.Template>
                                                            <ControlTemplate TargetType="ToggleButton">
                                                                <Grid Background="Transparent">
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition />
                                                                        <ColumnDefinition Width="30" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <Border Grid.ColumnSpan="2" Background="Transparent" />
                                                                    <Path
                                                                        x:Name="arrow"
                                                                        Grid.Column="1"
                                                                        Width="12"
                                                                        Height="12"
                                                                        HorizontalAlignment="Center"
                                                                        VerticalAlignment="Center"
                                                                        Data="M7 10l5 5 5-5z"
                                                                        Fill="Black"
                                                                        Stretch="Fill" />
                                                                </Grid>
                                                                <ControlTemplate.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="true">
                                                                        <Setter TargetName="arrow" Property="Fill" Value="#FF8060" />
                                                                    </Trigger>
                                                                    <Trigger Property="IsChecked" Value="true">
                                                                        <Setter TargetName="arrow" Property="Fill" Value="#FF8060" />
                                                                    </Trigger>
                                                                </ControlTemplate.Triggers>
                                                            </ControlTemplate>
                                                        </ToggleButton.Template>
                                                    </ToggleButton>

                                                    <ContentPresenter
                                                        x:Name="contentPresenter"
                                                        Margin="10,0,30,0"
                                                        HorizontalAlignment="Left"
                                                        VerticalAlignment="Center"
                                                        Content="{TemplateBinding SelectionBoxItem}"
                                                        ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" />
                                                </Grid>
                                            </Border>

                                            <Popup
                                                x:Name="PART_Popup"
                                                AllowsTransparency="True"
                                                Focusable="False"
                                                IsOpen="{Binding IsChecked, ElementName=toggleButton}"
                                                Placement="Bottom"
                                                PopupAnimation="Slide">
                                                <Border
                                                    x:Name="dropDownBorder"
                                                    MinWidth="{TemplateBinding ActualWidth}"
                                                    Margin="0,1,0,0"
                                                    Background="#FFFFFF"
                                                    BorderBrush="#33000000"
                                                    BorderThickness="1"
                                                    CornerRadius="8">
                                                    <Border.Effect>
                                                        <DropShadowEffect
                                                            BlurRadius="10"
                                                            Opacity="0.5"
                                                            ShadowDepth="0"
                                                            Color="Black" />
                                                    </Border.Effect>
                                                    <ScrollViewer MaxHeight="200" SnapsToDevicePixels="True">
                                                        <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained" />
                                                    </ScrollViewer>
                                                </Border>
                                            </Popup>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="mainBorder" Property="BorderBrush" Value="#0088CC" />
                                            </Trigger>
                                            <Trigger Property="IsDropDownOpen" Value="True">
                                                <Setter TargetName="mainBorder" Property="BorderBrush" Value="#0088CC" />
                                            </Trigger>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="mainBorder" Property="Opacity" Value="0.6" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ComboBox.Template>
                            </ComboBox>
                        </Grid>

                        <!--  Ngày mở sổ  -->
                        <Grid Grid.Column="4">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="24" />
                                <RowDefinition Height="36" />
                            </Grid.RowDefinitions>
                            <TextBlock
                                Grid.Row="0"
                                Margin="0,0,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="#000000"
                                Text="Ngày mở sổ" />
                            <Border
                                Grid.Row="1"
                                Width="152"
                                Height="30"
                                Padding="2"
                                VerticalAlignment="Center"
                                BorderBrush="#33000000"
                                BorderThickness="1"
                                CornerRadius="4">
                                <DatePicker
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    Background="#FFFFFF"
                                    BorderThickness="0"
                                    FontFamily="Segoe UI Variable"
                                    FontSize="14"
                                    FontStyle="Normal"
                                    FontWeight="Normal"
                                    Foreground="Black"
                                    SelectedDate="{Binding NgayMoSo}">
                                    <DatePicker.Resources>
                                        <Style x:Key="HideCalendarButton" TargetType="Button">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </Style>
                                    </DatePicker.Resources>
                                </DatePicker>
                            </Border>
                        </Grid>
                    </Grid>

                    <!--  Line 3  -->
                    <Grid Grid.Row="8">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="24" />
                            <RowDefinition Height="36" />
                        </Grid.RowDefinitions>
                        <TextBlock
                            Grid.Row="0"
                            Margin="0,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontFamily="Segoe UI Variable"
                            FontSize="14"
                            FontStyle="Normal"
                            FontWeight="Normal"
                            Foreground="#000000"
                            Text="Địa chỉ" />
                        <Border
                            Grid.Row="1"
                            Height="30"
                            Margin="0,0,15,0"
                            Padding="3"
                            VerticalAlignment="Center"
                            Background="#CBC7C4"
                            CornerRadius="4">
                            <TextBox
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Background="#CBC7C4"
                                BorderThickness="0"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="Black"
                                IsReadOnly="True"
                                Text="{Binding DiaChi, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                TextAlignment="Left" />
                        </Border>
                    </Grid>
                </Grid>

                <!--  Divider  -->
                <Border
                    Grid.Row="1"
                    Width="540"
                    Height="1"
                    BorderBrush="#33000000"
                    BorderThickness="1" />
            </Grid>

            <!--  List Nude  -->
            <Grid
                Grid.Row="1"
                Height="80"
                VerticalAlignment="Center"
                Background="#E6F0F0F0">
                <StackPanel
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Orientation="Horizontal">

                    <Button
                        Width="120"
                        Height="35"
                        Margin="0,0,20,0"
                        Background="#FFB498"
                        Command="{Binding CapNhatCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="buttonBorder"
                                    Padding="5,5,5,7"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FFA080" />
                                        <Setter TargetName="buttonBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect
                                                    BlurRadius="5"
                                                    Opacity="0.3"
                                                    ShadowDepth="1"
                                                    Color="#555555" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FF8060" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock
                            Width="70"
                            Height="34"
                            FontFamily="Segoe UI Variable"
                            FontSize="18"
                            FontWeight="Normal"
                            Foreground="#92492D"
                            Text="Cập nhật"
                            TextAlignment="Center" />
                    </Button>
                    <Button
                        Width="120"
                        Height="35"
                        Background="#FFB498"
                        Command="{Binding CloseCommand}">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border
                                    x:Name="buttonBorder"
                                    Padding="5,5,5,7"
                                    Background="{TemplateBinding Background}"
                                    CornerRadius="5">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FFA080" />
                                        <Setter TargetName="buttonBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect
                                                    BlurRadius="5"
                                                    Opacity="0.3"
                                                    ShadowDepth="1"
                                                    Color="#555555" />
                                            </Setter.Value>
                                        </Setter>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="buttonBorder" Property="Background" Value="#FF8060" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                        <TextBlock
                            Width="70"
                            Height="34"
                            FontFamily="Segoe UI Variable"
                            FontSize="18"
                            FontWeight="Normal"
                            Foreground="#92492D"
                            Text="Thoát"
                            TextAlignment="Center" />
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>