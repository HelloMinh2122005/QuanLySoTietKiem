<Page
    x:Class="QuanLyDaiLy.Views.ThamSoView.ThamSoPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="1536"
    d:DesignWidth="1536"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*" />
            <RowDefinition Height="95*" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            Margin="20,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            FontFamily="Nunito"
            FontSize="60"
            FontStyle="Normal"
            FontWeight="Bold"
            Foreground="#333333"
            LineHeight="50"
            Text="Danh sách Tham số">
            <TextBlock.Effect>
                <DropShadowEffect
                    BlurRadius="3"
                    Direction="330"
                    Opacity="0.3"
                    ShadowDepth="1"
                    Color="#CCCCCC" />
            </TextBlock.Effect>
        </TextBlock>

        <Border
            Grid.Row="1"
            Margin="20"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            Background="White"
            BorderBrush="#E0E0E0"
            BorderThickness="1"
            CornerRadius="12">
            <Border.Effect>
                <DropShadowEffect
                    BlurRadius="10"
                    Direction="330"
                    Opacity="0.2"
                    ShadowDepth="3"
                    Color="#AAAAAA" />
            </Border.Effect>

            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="100" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Header with background  -->
                    <Border
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Background="#EBDFD7"
                        BorderBrush="#E0E0E0"
                        BorderThickness="0,0,0,1"
                        CornerRadius="12,12,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock
                                Grid.Column="0"
                                Margin="20,10,0,0"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                FontFamily="Nunito"
                                FontSize="40"
                                FontStyle="Normal"
                                FontWeight="Bold"
                                Foreground="#333333"
                                LineHeight="20"
                                Text="Tên Tham số" />

                            <TextBlock
                                Grid.Column="1"
                                Margin="0,30,0,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Top"
                                FontFamily="Nunito"
                                FontSize="40"
                                FontStyle="Normal"
                                FontWeight="Bold"
                                Foreground="#333333"
                                LineHeight="20"
                                Text="Giá trị tham số" />
                        </Grid>
                    </Border>

                    <!--  Parameter names and descriptions  -->
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="0"
                        Margin="0,20,0,20"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Orientation="Vertical">

                        <!--  First parameter section  -->
                        <Border Margin="20,0,20,20" Padding="15">
                            <StackPanel>
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontFamily="Nunito"
                                    FontSize="30"
                                    FontStyle="Normal"
                                    FontWeight="SemiBold"
                                    Foreground="#333333"
                                    LineHeight="20"
                                    Text="Quy định tiền gởi tối thiểu" />
                                <TextBlock
                                    Margin="0,15,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontFamily="Nunito"
                                    FontSize="25"
                                    FontStyle="Normal"
                                    Foreground="#555555"
                                    LineHeight="20"
                                    Text="Tiền gởi khi mở sổ mới phải lớn hơn hoặc bằng tiền gởi tối thiểu" />
                            </StackPanel>
                        </Border>

                        <!--  Second parameter section  -->
                        <Border
                            Margin="20,0,20,20"
                            Padding="15"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontFamily="Nunito"
                                    FontSize="30"
                                    FontStyle="Normal"
                                    FontWeight="SemiBold"
                                    Foreground="#333333"
                                    LineHeight="20"
                                    Text="Số tiền gởi tối thiểu" />
                            </StackPanel>
                        </Border>
                        <Border
                            Margin="20,0,20,20"
                            Padding="15"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontFamily="Nunito"
                                    FontSize="30"
                                    FontStyle="Normal"
                                    FontWeight="SemiBold"
                                    Foreground="#333333"
                                    LineHeight="20"
                                    Text="Số tiền gởi thêm tối thiểu" />
                                <TextBlock
                                    Margin="0,15,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontFamily="Nunito"
                                    FontSize="25"
                                    FontStyle="Normal"
                                    Foreground="#555555"
                                    LineHeight="20"
                                    Text="Tiền gởi thêm vào sổ không được vượt quá số tiền gởi thêm tối thiểu" />
                            </StackPanel>
                        </Border>
                        <Border
                            Margin="20,0,20,20"
                            Padding="15"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontFamily="Nunito"
                                    FontSize="30"
                                    FontStyle="Normal"
                                    FontWeight="SemiBold"
                                    Foreground="#333333"
                                    LineHeight="20"
                                    Text="Số ngày mở sổ tối thiểu" />
                                <TextBlock
                                    Margin="0,15,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontFamily="Nunito"
                                    FontSize="25"
                                    FontStyle="Normal"
                                    Foreground="#555555"
                                    LineHeight="20"
                                    Text="Số ngày mở sổ tối thiểu để có thể rút tiền" />
                            </StackPanel>
                        </Border>
                        <Border
                            Margin="20,0,20,20"
                            Padding="15"
                            CornerRadius="8">
                            <StackPanel>
                                <TextBlock
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontFamily="Nunito"
                                    FontSize="30"
                                    FontStyle="Normal"
                                    FontWeight="SemiBold"
                                    Foreground="#333333"
                                    LineHeight="20"
                                    Text="Số ngày mở sổ tối thiểu để có lãi" />
                                <TextBlock
                                    Margin="0,15,0,0"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    FontFamily="Nunito"
                                    FontSize="25"
                                    FontStyle="Normal"
                                    Foreground="#555555"
                                    LineHeight="20"
                                    Text="Số ngày mở sổ tối thiểu để có lãi" />
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!--  Toggle buttons with adjusted positioning  -->
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="0,20,0,20"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"
                        Orientation="Vertical">

                        <ToggleButton
                            Margin="0,30,0,0"
                            HorizontalAlignment="Center"
                            VerticalContentAlignment="Center"
                            Cursor="Hand"
                            IsChecked="{Binding ApDungSoTienGuiToiThieu, Mode=TwoWay}"
                        >
                            <ToggleButton.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="30" />
                                </Style>
                            </ToggleButton.Resources>
                            <ToggleButton.Style>
                                <Style TargetType="{x:Type ToggleButton}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type ToggleButton}">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                    <!--  Toggle Switch Background  -->
                                                    <Border
                                                        x:Name="SwitchTrack"
                                                        Grid.Column="0"
                                                        Width="90"
                                                        Height="48"
                                                        VerticalAlignment="Center"
                                                        Background="#E0E0E0"
                                                        CornerRadius="24">

                                                        <!--  Switch Thumb/Knob  -->
                                                        <Border
                                                            x:Name="SwitchKnob"
                                                            Width="40"
                                                            Height="40"
                                                            Margin="4,0,0,0"
                                                            HorizontalAlignment="Left"
                                                            Background="White"
                                                            CornerRadius="20">
                                                            <Border.Effect>
                                                                <DropShadowEffect
                                                                    BlurRadius="3"
                                                                    Opacity="0.2"
                                                                    ShadowDepth="1"
                                                                    Color="#555555" />
                                                            </Border.Effect>
                                                        </Border>
                                                    </Border>
                                                </Grid>

                                                <!--  Visual States  -->
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsChecked" Value="True">
                                                        <Setter TargetName="SwitchTrack" Property="Background" Value="#D34816" />
                                                        <Setter TargetName="SwitchKnob" Property="HorizontalAlignment" Value="Right" />
                                                        <Setter TargetName="SwitchKnob" Property="Margin" Value="0,0,4,0" />
                                                    </Trigger>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter TargetName="SwitchTrack" Property="Background">
                                                            <Setter.Value>
                                                                <SolidColorBrush Opacity="0.9" Color="#CCCCCC" />
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Trigger>
                                                    <MultiTrigger>
                                                        <MultiTrigger.Conditions>
                                                            <Condition Property="IsMouseOver" Value="True" />
                                                            <Condition Property="IsChecked" Value="True" />
                                                        </MultiTrigger.Conditions>
                                                        <Setter TargetName="SwitchTrack" Property="Background">
                                                            <Setter.Value>
                                                                <SolidColorBrush Opacity="0.9" Color="#D34816" />
                                                            </Setter.Value>
                                                        </Setter>
                                                    </MultiTrigger>
                                                    <Trigger Property="IsEnabled" Value="False">
                                                        <Setter TargetName="SwitchTrack" Property="Background" Value="#E0E0E0" />
                                                        <Setter TargetName="SwitchKnob" Property="Background" Value="#CCCCCC" />
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ToggleButton.Style>
                        </ToggleButton>
                        <Border
                            Height="60"
                            Margin="20,55,20,0"
                            Padding="3"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            BorderBrush="#33000000"
                            BorderThickness="1"
                            CornerRadius="4">
                            <TextBox
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Background="#FFFFFF"
                                BorderThickness="0"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="Black"
                                IsReadOnly="False"
                                Text="{Binding SoTienGoiToiThieu, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                TextAlignment="Left" />
                        </Border>
                        <Border
                            Height="60"
                            Margin="20,30,20,0"
                            Padding="3"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            BorderBrush="#33000000"
                            BorderThickness="1"
                            CornerRadius="4">
                            <TextBox
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Background="#FFFFFF"
                                BorderThickness="0"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="Black"
                                IsReadOnly="False"
                                Text="{Binding SoTienGuiThemToiThieu, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                TextAlignment="Left" />
                        </Border>
                        <Border
                            Height="60"
                            Margin="20,75,20,0"
                            Padding="3"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            BorderBrush="#33000000"
                            BorderThickness="1"
                            CornerRadius="4">
                            <TextBox
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Background="#FFFFFF"
                                BorderThickness="0"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="Black"
                                IsReadOnly="False"
                                Text="{Binding SoNgayMoSoToiThieu, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                TextAlignment="Left" />
                        </Border>
                        <Border
                            Height="60"
                            Margin="20,75,20,0"
                            Padding="3"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            BorderBrush="#33000000"
                            BorderThickness="1"
                            CornerRadius="4">
                            <TextBox
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Stretch"
                                VerticalContentAlignment="Center"
                                Background="#FFFFFF"
                                BorderThickness="0"
                                FontFamily="Segoe UI Variable"
                                FontSize="14"
                                FontStyle="Normal"
                                FontWeight="Normal"
                                Foreground="Black"
                                IsReadOnly="False"
                                Text="{Binding SoNgayMoSoToiThieuDeCoLai, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                TextAlignment="Left" />
                        </Border>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Page>
